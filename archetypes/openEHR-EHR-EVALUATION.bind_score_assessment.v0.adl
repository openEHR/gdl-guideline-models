definition
	EVALUATION[at0000] matches {    -- Bilirubin-Induced Neurologic Dysfunction (BIND) score assessment
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- Interpretation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0005,    -- No acute bilirubin encephalopathy
									at0006,    -- Mild acute bilirubin encephalopathy
									at0007,    -- Moderate acute bilirubin encephalopathy
									at0008]    -- Severe acute bilirubin encephalopathy
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0009] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

