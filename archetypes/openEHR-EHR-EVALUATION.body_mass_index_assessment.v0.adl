definition
	EVALUATION[at0000] matches {    -- Body mass index assessment
		data matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {    -- BMI classification
						value matches {
							0|[local::at0003],
							1|[local::at0004],
							2|[local::at0005],
							3|[local::at0006],
							4|[local::at0007],
							5|[local::at0008]
						}
					}
				}
			}
		}
	}

