definition
	EVALUATION[at0000] matches {    -- crb 65 assessment
		data matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {    -- Risk assessment
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0005,    -- Low risk
									at0006,    -- Moderate risk
									at0007]    -- Severe risk
								}
							}
						}
					}
					ELEMENT[at0003] occurrences matches {0..1} matches {    -- Recommendation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0008,    -- Consider home treatment
									at0009,    -- Consider hospital care
									at0010]    -- Urgent hospital admission
								}
							}
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- 30-day mortality
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0011,    -- 1.2%
									at0012,    -- 8.2%
									at0013]    -- 31.3%
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0014] matches {*}    -- Item tree
		}
	}

