definition
	EVALUATION[at0000] matches {    -- CURB 65 assessment
		data matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0002] occurrences matches {0..1} matches {    -- Risk assessment
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0003,    -- Low risk
									at0004,    -- Moderate risk
									at0005]    -- Severe risk
								}
							}
						}
					}
					ELEMENT[at0006] occurrences matches {0..1} matches {    -- Recommendation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0011,    -- Home treatment
									at0012,    -- Short-stay inpatient treatment or hospital-supervised outpatient treatment
									at0013,    -- Review by a senior physician to refine disease severity assessment, Managed as having high severity pneumonia
									at0014]    -- Transfer to a critical care unit (high dependency unit or intensive care unit)
								}
							}
						}
					}
					ELEMENT[at0007] occurrences matches {0..1} matches {    -- 30-day mortality
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0008,    -- less than 3%
									at0009,    -- 9%
									at0010]    -- 15-40%
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0015] matches {*}    -- Item tree
		}
	}

