definition
	EVALUATION[at0000] matches {    -- Hepatocellular adenoma (HCA) assessment
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- HCA subtype
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0007,    -- HNF1A-inactivated hepatocellular adenoma
									at0008,    -- Inflammatory hepatocellular adenoma
									at0009,    -- β-catenin-activated hepatocellular adenoma
									at0010,    -- β-catenin-activated inflammatory hepatocellular adenoma
									at0011,    -- Sonic hedgehog hepatocellular adenoma
									at0012]    -- Unclassified hepatocellular adenoma
								}
							}
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {    -- Risk for HCC
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0013,    -- Low
									at0014,    -- High
									at0015]    -- Not specified
								}
							}
						}
					}
					ELEMENT[at0006] occurrences matches {0..1} matches {    -- Validation message
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::at0016]    -- Selected histology and immunohistochemistry patterns do not match a single HCA subtype.
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0002] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

