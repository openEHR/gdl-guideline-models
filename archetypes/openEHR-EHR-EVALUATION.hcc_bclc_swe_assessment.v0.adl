definition
	EVALUATION[at0000] matches {    -- Hepatocellular carcinoma Swedish BCLC assessment
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- Stage
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0005,    -- Early
									at0006,    -- Intermediate
									at0007,    -- Advanced
									at0008]    -- Terminal
								}
							}
						}
					}
					ELEMENT[at0009] occurrences matches {0..1} matches {    -- Treatment recommendation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0010,    -- Ablation
									at0011,    -- Resection
									at0012,    -- Transplantation
									at0013,    -- TACE
									at0014,    -- SIRT
									at0015,    -- Systemic therapy
									at0016]    -- Best supportive care
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0002] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

