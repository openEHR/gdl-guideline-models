definition
	EVALUATION[at0000] matches {    -- Hepatocellular Carcinoma Diagnostic Assessment
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0010] occurrences matches {0..1} matches {    -- Diagnostic conclusion
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0011,    -- HCC diagnosed by imaging criteria
									at0012]    -- Insufficient imaging evidence to diagnose hepatocellular carcinoma
								}
							}
						}
					}
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- Recommended next step
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0005,    -- Repeat liver ultrasound after approximately 4 months
									at0006,    -- Reassess diagnostic pathway based on lesion size
									at0007,    -- Perform four-phase CT or MRI of the liver
									at0008,    -- Perform alternative imaging modality (four-phase CT or MRI)
									at0009]    -- Multidisciplinary team assessment with consideration of additional diagnostic measures
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0002] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

