definition
	EVALUATION[at0000] matches {    -- NEWS 2 assessment
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- Hypercapnic respiratory failure
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0015,    -- Yes
									at0016]    -- No
								}
							}
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {    -- Frequency of monitoring
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0006,    -- Every 12 hours
									at0007,    -- Every 4-6 hours
									at0008,    -- Every 1 hour
									at0009]    -- Continuous monitoring
								}
							}
						}
					}
					ELEMENT[at0010] occurrences matches {0..1} matches {    -- Response
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0011,    -- Emergent assessment by a clinical team or critical care team and usually transfer to higher level of care
									at0012,    -- Urgent review by a ward-based doctor or acute team nurse, to decide if critical care team assessment is needed
									at0013,    -- Urgent review by a ward-based doctor, to decide change in frequency of clinical monitoring or escalation of care
									at0014]    -- Assessment by a competent registered nurse or equivalent, to decide change in frequency of clinical monitoring or escalation of care
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0002] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

