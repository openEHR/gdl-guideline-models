	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the individual physiological measurements, use of supplemental oxygen, level of consciousness, selected oxygen saturation scale, and the total calculated NEWS2 score.
">
			keywords = <"news2, national early warning score, vital signs, deterioration, acute illness, sepsis, early warning, physiological score, rcp", ...>
			copyright = <"© Cambio CDS">
			use = <"Use to periodically record a patient's vital signs and other parameters included in the NEWS2 assessment. Intended for use in adult patients (typically ≥16 years) in acute hospital settings or pre-hospital care.">
			misuse = <"Not to be used in children (<16 years) or during pregnancy where physiological responses differ. Does not replace clinical judgment. Not to be used as the sole determinant for specific diagnoses (e.g., sepsis), although it can be a key indicator.">
		>
