definition
	EVALUATION[at0000] matches {    -- Prostate radiation therapy assessment
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0010] occurrences matches {0..1} matches {    -- Recommended dose and fractionation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0011,    -- Primary RT: 2 Gy x 39 fx
									at0012,    -- Postop RT: 2 Gy x 32 fx or 2 Gy x 35 fx
									at0013,    -- 3 Gy x 20-22 fx
									at0014,    -- 6.1 Gy x 7 fx
									at0015,    -- 14-15 Gy x 1 fx or 10 Gy x 2 fx
									at0016,    -- 13-14 Gy x 2 fx
									at0017,    -- 2,75 Gy x 20 . 3 Gy x 19-20
									at0018]    -- 6-6,1 Gy x 6
								}
							}
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {    -- Recommendation status
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0006,    -- Recommended
									at0007,    -- Not recommended
									at0008,    -- Consider/Conditional
									at0009]    -- Recommended + focal boost, if necessary
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0002] occurrences matches {0..1} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

