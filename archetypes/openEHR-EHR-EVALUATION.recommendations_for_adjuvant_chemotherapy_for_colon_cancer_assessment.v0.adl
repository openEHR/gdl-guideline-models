definition
	EVALUATION[at0000] matches {    -- Recommendations for adjuvant chemotherapy for colon cancer assessment
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- Adjuvant kemoterapi
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0006,    -- Abstain
									at0007,    -- Fluoropyrimidine for 6 months
									at0008,    -- CAPOX for 3 months or FOLFOX for 3 months
									at0009,    -- CAPOX for 3 months or FOLFOX for 6 months
									at0010]    -- CAPOX for 3-6 months or FOLFOX for 6 months
								}
							}
						}
					}
					ELEMENT[at0005] occurrences matches {0..1} matches {    -- Observation
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0011,    -- If combination therapy is not used for any reason, fluoropyrimidine monotherapy is used for 6 months, except in dMMR/MSI-high stage II–III disease, where combination therapy is preferred.
									at0012]    -- Oxaliplatin should be discontinued after 6 months to avoid persistent neuropathy. Treatment should then continue with fluoropyrimidine monotherapy.
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0002] occurrences matches {0..1} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

