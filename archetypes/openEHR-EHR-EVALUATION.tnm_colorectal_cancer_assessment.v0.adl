definition
	EVALUATION[at0000] matches {    -- TNM Colorectal cancer assessment
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- T stage
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0005,    -- T0
									at0006,    -- Tx
									at0007,    -- Tis
									at0008,    -- T1
									at0009,    -- T2
									at0010,    -- T3
									at0011,    -- T3a
									at0012,    -- T3b
									at0013,    -- T3c
									at0014,    -- T3d
									at0015,    -- T4a
									at0016]    -- T4b
								}
							}
						}
					}
					ELEMENT[at0019] occurrences matches {0..1} matches {    -- N stage
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0020,    -- N0
									at0021,    -- Nx
									at0022,    -- N1
									at0029,    -- N1a
									at0030,    -- N1b
									at0031,    -- N1c
									at0032,    -- N2
									at0033,    -- N2a
									at0034]    -- N2b
								}
							}
						}
					}
					ELEMENT[at0023] occurrences matches {0..1} matches {    -- M stage
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0024,    -- M0
									at0025,    -- M1
									at0026,    -- M1a
									at0027,    -- M1b
									at0028]    -- M1c
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0002] occurrences matches {0..1} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

