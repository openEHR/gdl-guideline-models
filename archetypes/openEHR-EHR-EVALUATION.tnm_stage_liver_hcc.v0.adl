definition
	EVALUATION[at0000] matches {    -- TNM staging for liver hepatocellular carcinoma
		data matches {
			ITEM_TREE[at0003] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					ELEMENT[at0004] occurrences matches {0..1} matches {    -- Stage group
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0005,    -- Stage IA
									at0006,    -- Stage IB
									at0007,    -- Stage II
									at0008,    -- Stage IIIA
									at0009,    -- Stage IIIB
									at0010,    -- Stage IVA
									at0011,    -- Stage IVB
									at0012]    -- Stage cannot be assigned
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0001] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0002] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

