definition
	OBSERVATION[at0000] matches {    -- Barcelona-Clinic Liver Cancer (BCLC) Staging Classification
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0006] occurrences matches {0..1} matches {    -- Nodule
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0007,    -- Single ≤2 cm
													at0008,    -- Single, or ≤3 nodules each ≤3cm
													at0009,    -- Multinodular
													at0010]    -- Portal invasion and/or extrahepatic spread
												}
											}
										}
									}
									ELEMENT[at0011] occurrences matches {0..1} matches {    -- Liver function
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0012,    -- Preserved liver function
													at0013]    -- End stage liver function
												}
											}
										}
									}
									ELEMENT[at0014] occurrences matches {0..1} matches {    -- ECOG performance status
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0015,    -- 0
													at0016,    -- 1-2
													at0017]    -- 3-4
												}
											}
										}
									}
									ELEMENT[at0018] occurrences matches {0..1} matches {    -- Potential candidate for liver transplantion
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0019,    -- Yes
													at0020]    -- No
												}
											}
										}
									}
									ELEMENT[at0021] occurrences matches {0..1} matches {    -- Portal pressure, bilirubin
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0022,    -- Normal
													at0023]    -- Increased
												}
											}
										}
									}
									ELEMENT[at0024] occurrences matches {0..1} matches {    -- Contraindications to liver transplantation
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0025,    -- Yes
													at0026]    -- No
												}
											}
										}
									}
									ELEMENT[at0027] occurrences matches {0..1} matches {    -- Number of nodules
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0028,    -- Single
													at0029]    -- ≤3 nodules, each ≤3cm
												}
											}
										}
									}
									ELEMENT[at0030] occurrences matches {0..1} matches {    -- HCC characteristics
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0031,    -- Extended liver transplant criteria (size, AFP)
													at0032,    -- Well defined nodules, preserved portal flow, selective access
													at0033]    -- Diffuse, infiltrative, extensive bilobar liver involvement
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0004] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0005] occurrences matches {0..1} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

