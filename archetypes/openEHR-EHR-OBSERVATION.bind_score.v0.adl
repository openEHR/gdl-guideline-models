definition
	OBSERVATION[at0000] matches {    -- BIND score
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0007] occurrences matches {0..1} matches {    -- Mental Status
										value matches {
											0|[local::at0012],
											1|[local::at0013],
											2|[local::at0014],
											3|[local::at0015]
										}
									}
									ELEMENT[at0008] occurrences matches {0..1} matches {    -- Muscle Tone
										value matches {
											0|[local::at0016],
											1|[local::at0017],
											2|[local::at0018],
											3|[local::at0019]
										}
									}
									ELEMENT[at0009] occurrences matches {0..1} matches {    -- Cry Pattern
										value matches {
											0|[local::at0020],
											1|[local::at0021],
											2|[local::at0022],
											3|[local::at0023]
										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {    -- BIND Score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..9|}
											}
										}
									}
									ELEMENT[at0011] occurrences matches {0..1} matches {    -- Interpretation
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0024,    -- No acute bilirubin encephalopathy
													at0025,    -- Mild acute bilirubin encephalopathy
													at0026,    -- Moderate acute bilirubin encephalopathy
													at0027]    -- Severe acute bilirubin encephalopathy
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}

