	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To provide a concise, structured overview of key laboratory findings that influence diagnostic assessment, treatment planning, and clinical decision-making in lung cancer care.">
			keywords = <"lung cancer; laboratory tests; blood count; CRP; coagulation; liver enzymes; electrolytes; creatinine", ...>
			copyright = <"Use Â© Cambio CDS">
			use = <"Use to record grouped laboratory results during initial evaluation, triage, oncology consultations, or multidisciplinary assessment for lung cancer. Suitable when detailed analyte values are not required and categorical interpretation is sufficient for decision support.">
			misuse = <"Do not use to record individual analyte measurements or detailed laboratory results. Not intended for monitoring specific lab trends, integrating laboratory information system (LIS) data, or providing numeric values for clinical calculations.">
		>
	>
