	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the observed nuclear features and assign the final Fuhrman Nuclear Grade (1 to 4) for renal cell carcinoma.">
			keywords = <"fuhrman","renal cell carcinoma","nuclear grade","oncology","pathology","clear cell","histology","tumor grading">
			copyright = <"Use © Cambio CDS">
			use = <"Use to record nuclear diameter, nuclear shape, nucleolar prominence, and the presence of bizarre nuclei in cases of renal cell carcinoma. The recorded values are used to assign the final Fuhrman Nuclear Grade (1 to 4). This archetype supports clinical documentation, structured reporting, and integration with decision support logic.">
			misuse = <"Not to be used for recording histological grades of tumors other than renal cell carcinoma. For non renal cell carcinoma tumors, use a tumor-specific grading archetype.">
		>
	>
	other_details = <
		["licence"] = <"This work is licensed under the Creative Commons Attribution-ShareAlike 4.0 International License. To view a copy of this license, visit http://creativecommons.org/licenses/by-sa/4.0/.">
		["custodian_organisation"] = <"openEHR Foundation">
		["original_namespace"] = <"org.openehr">
		["original_publisher"] = <"openEHR Foundation">
		["custodian_namespace"] = <"org.openehr">
		["references"] = <"Fuhrman SA, Lasky LC, Limas C. Prognostic significance of morphologic parameters in renal cell carcinoma. Am J Surg Pathol. 1982 Oct;6(7):655-63. doi: 10.1097/00000478-198210000-00007. PMID: 7180965.
Ficarra V, Martignoni G, Maffei N, Brunelli M, Novara G, Zanolla L, Pea M, Artibani W. Original and reviewed nuclear grading according to the Fuhrman system: a multivariate analysis of 388 patients with conventional renal cell carcinoma. Cancer. 2005 Jan 1;103(1):68-75. doi: 10.1002/cncr.20749. PMID: 15573369.">
