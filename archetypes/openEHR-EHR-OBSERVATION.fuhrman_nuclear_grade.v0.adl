definition
	OBSERVATION[at0000] matches {    -- fuhrman_nuclear_grade
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0006] occurrences matches {0..1} matches {    -- Nuclear diameter
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0007,    -- Small (~10µm)
													at0008,    -- Larger (~15µm)
													at0009]    -- Even larger (~20µm)
												}
											}
										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {    -- Nuclear shape
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0011,    -- Round, uniform
													at0012,    -- Irregularities in outline
													at0013]    -- Obvious irregular outline
												}
											}
										}
									}
									ELEMENT[at0014] occurrences matches {0..1} matches {    -- Nucleoli
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0015,    -- Absent, inconspicuous
													at0016,    -- Visible at x400
													at0017]    -- Prominent at x100
												}
											}
										}
									}
									ELEMENT[at0018] occurrences matches {0..1} matches {    -- Bizarre often multilobed nuclei and/or spindle cells
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0019,    -- Yes
													at0020]    -- No
												}
											}
										}
									}
									ELEMENT[at0021] occurrences matches {0..1} matches {    -- Final results
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0022,    -- Grade 1
													at0023,    -- Grade 2
													at0024,    -- Grade 3
													at0025]    -- Grade 4
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0004] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					CLUSTER[at0005] occurrences matches {0..1} matches {*}    -- Extension
				}
			}
		}
	}

