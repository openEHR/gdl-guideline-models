definition
	OBSERVATION[at0000] matches {    -- Geriatric Depression Scale 15 (GDS-15)
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0006] occurrences matches {0..1} matches {    -- Are you basically satisfied with your life?
										value matches {
											0|[local::at0022],
											1|[local::at0023]
										}
									}
									ELEMENT[at0007] occurrences matches {0..1} matches {    -- Have you dropped many of your activities and interests?
										value matches {
											0|[local::at0024],
											1|[local::at0025]
										}
									}
									ELEMENT[at0008] occurrences matches {0..1} matches {    -- Do you feel that your life is empty?
										value matches {
											0|[local::at0026],
											1|[local::at0027]
										}
									}
									ELEMENT[at0009] occurrences matches {0..1} matches {    -- Do you often get bored?
										value matches {
											0|[local::at0028],
											1|[local::at0029]
										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {    -- Are you in good spirits most of the time?
										value matches {
											0|[local::at0030],
											1|[local::at0031]
										}
									}
									ELEMENT[at0011] occurrences matches {0..1} matches {    -- Are you afraid that something bad is going to happen to you?
										value matches {
											0|[local::at0032],
											1|[local::at0033]
										}
									}
									ELEMENT[at0012] occurrences matches {0..1} matches {    -- Do you feel happy most of the time?
										value matches {
											0|[local::at0034],
											1|[local::at0035]
										}
									}
									ELEMENT[at0013] occurrences matches {0..1} matches {    -- Do you often feel helpless?
										value matches {
											0|[local::at0036],
											1|[local::at0037]
										}
									}
									ELEMENT[at0014] occurrences matches {0..1} matches {    -- Do you prefer to stay at home, rather than going out and doing new things?
										value matches {
											0|[local::at0038],
											1|[local::at0039]
										}
									}
									ELEMENT[at0015] occurrences matches {0..1} matches {    -- Do you feel you have more problems with memory than most?
										value matches {
											0|[local::at0040],
											1|[local::at0041]
										}
									}
									ELEMENT[at0016] occurrences matches {0..1} matches {    -- Do you think it is wonderful to be alive now?
										value matches {
											0|[local::at0042],
											1|[local::at0043]
										}
									}
									ELEMENT[at0017] occurrences matches {0..1} matches {    -- Do you feel pretty worthless the way you are now?
										value matches {
											0|[local::at0044],
											1|[local::at0045]
										}
									}
									ELEMENT[at0018] occurrences matches {0..1} matches {    -- Do you feel full of energy?
										value matches {
											0|[local::at0046],
											1|[local::at0047]
										}
									}
									ELEMENT[at0019] occurrences matches {0..1} matches {    -- Do you feel that your situation is hopeless?
										value matches {
											0|[local::at0048],
											1|[local::at0049]
										}
									}
									ELEMENT[at0020] occurrences matches {0..1} matches {    -- Do you think that most people are better off than you are?
										value matches {
											0|[local::at0050],
											1|[local::at0051]
										}
									}
									ELEMENT[at0021] occurrences matches {0..1} matches {    -- Total score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..15|}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0004] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0005] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

