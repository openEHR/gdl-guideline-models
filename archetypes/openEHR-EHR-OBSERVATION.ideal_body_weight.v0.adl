definition
	OBSERVATION[at0000] matches {    -- Ideal Body Weight
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0004] occurrences matches {0..1} matches {    -- Formula
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0005,    -- Devine Formula
													at0006,    -- Hamwi Formula
													at0007,    -- Miller Formula
													at0008,    -- Robinson Formula
													at0009,    -- Broca Index
													at0010,    -- Peterson Formula
													at0011,    -- Adjusted Body Weight (AdjBW)
													at0012,    -- Lean Body Weight (LBW) Formula
													at0013,    -- WHO BMI-Based Ideal Weight
													at0014]    -- J. D. Robinson (Modified Broca)
												}
											}
										}
									}
									ELEMENT[at0016] occurrences matches {0..1} matches {    -- Ideal body weight
										value matches {
											C_DV_QUANTITY <
												property = <[openehr::124]>
												list = <
													["1"] = <
														units = <"[lb_av]">
													>
												>
											>
										}
									}
									ELEMENT[at0017] occurrences matches {0..1} matches {    -- Comment
										value matches {
											DV_TEXT matches {*}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0018] matches {*}    -- Item tree
		}
	}

