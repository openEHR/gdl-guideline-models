definition
	OBSERVATION[at0000] matches {    -- Neck Disability Index (NDI)
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0007] occurrences matches {0..1} matches {    -- Pain intensity
										value matches {
											0|[local::at0008],
											1|[local::at0009],
											2|[local::at0010],
											3|[local::at0011],
											4|[local::at0012],
											5|[local::at0013]
										}
									}
									ELEMENT[at0014] occurrences matches {0..1} matches {    -- Personal care
										value matches {
											0|[local::at0025],
											1|[local::at0026],
											2|[local::at0027],
											3|[local::at0028],
											4|[local::at0029],
											5|[local::at0030]
										}
									}
									ELEMENT[at0015] occurrences matches {0..1} matches {    -- Lifting
										value matches {
											0|[local::at0031],
											1|[local::at0032],
											2|[local::at0033],
											3|[local::at0034],
											4|[local::at0035],
											5|[local::at0036]
										}
									}
									ELEMENT[at0016] occurrences matches {0..1} matches {    -- Work
										value matches {
											0|[local::at0037],
											1|[local::at0038],
											2|[local::at0039],
											3|[local::at0040],
											4|[local::at0041],
											5|[local::at0042]
										}
									}
									ELEMENT[at0017] occurrences matches {0..1} matches {    -- Headaches
										value matches {
											0|[local::at0043],
											1|[local::at0044],
											2|[local::at0045],
											3|[local::at0046],
											4|[local::at0047],
											5|[local::at0048]
										}
									}
									ELEMENT[at0018] occurrences matches {0..1} matches {    -- Concentration
										value matches {
											0|[local::at0049],
											1|[local::at0050],
											2|[local::at0051],
											3|[local::at0052],
											4|[local::at0053],
											5|[local::at0054]
										}
									}
									ELEMENT[at0019] occurrences matches {0..1} matches {    -- Sleeping
										value matches {
											0|[local::at0055],
											1|[local::at0056],
											2|[local::at0057],
											3|[local::at0058],
											4|[local::at0059],
											5|[local::at0060]
										}
									}
									ELEMENT[at0020] occurrences matches {0..1} matches {    -- Driving
										value matches {
											0|[local::at0061],
											1|[local::at0062],
											2|[local::at0063],
											3|[local::at0064],
											4|[local::at0065],
											5|[local::at0066]
										}
									}
									ELEMENT[at0021] occurrences matches {0..1} matches {    -- Reading
										value matches {
											0|[local::at0067],
											1|[local::at0068],
											2|[local::at0069],
											3|[local::at0070],
											4|[local::at0071],
											5|[local::at0072]
										}
									}
									ELEMENT[at0022] occurrences matches {0..1} matches {    -- Recreation
										value matches {
											0|[local::at0073],
											1|[local::at0074],
											2|[local::at0075],
											3|[local::at0076],
											4|[local::at0077],
											5|[local::at0078]
										}
									}
									ELEMENT[at0079] occurrences matches {0..1} matches {    -- Total score
										value matches {
											DV_COUNT matches {
												magnitude matches {|0..50|}
											}
										}
									}
									ELEMENT[at0024] occurrences matches {0..1} matches {    -- Percentage
										value matches {
											C_DV_QUANTITY <
												property = <[openehr::507]>
												list = <
													["1"] = <
														units = <"%">
														magnitude = <|0.0..100.0|>
														precision = <|0|>
													>
												>
											>
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
