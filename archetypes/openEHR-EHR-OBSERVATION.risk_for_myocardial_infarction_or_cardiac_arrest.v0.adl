	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the clinical inputs needed to calculate the 30-day risk of myocardial infarction or cardiac arrest following surgery using the Gupta MICA logistic regression model.">
			keywords = <"perioperative risk","cardiac arrest","myocardial infarction","surgery","risk score","gupta">
			copyright = <"Use © Cambio CDS">
			use = <"Used in clinical decision support systems to assess perioperative cardiac risk based on patient age, ASA class, functional status, serum creatinine, and type of surgery. Intended to support shared decision-making and surgical planning.">
			misuse = <"Should not be used to replace comprehensive cardiovascular risk assessment or predict long-term cardiac outcomes. Not applicable to patients undergoing cardiac surgery.">
		>
	>
	other_details = <
