definition
	OBSERVATION[at0000] matches {    -- Risk for Myocardial Infarction or Cardiac Arrest
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0006] occurrences matches {0..1} matches {    -- Functional status
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0007,    -- Independent
													at0008,    -- Partially dependent
													at0009]    -- Totally dependent
												}
											}
										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {    -- ASA class
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0011,    -- 1: normal healthy patient
													at0012,    -- 2: mild systemic disease
													at0013,    -- 3: severe systemic disease
													at0014,    -- 4: severe systemic disease that is a constant threat to life*
													at0015]    -- 5: moribund, not expected to survive without surgery
												}
											}
										}
									}
									ELEMENT[at0016] occurrences matches {0..1} matches {    -- Creatinine
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0017,    -- Normal (≤1.5 mg/dL, 133 µmol/L)
													at0018,    -- Elevated (>1.5 mg/dL, 133 µmol/L)
													at0019]    -- Unknown
												}
											}
										}
									}
									ELEMENT[at0020] occurrences matches {0..1} matches {    -- Type of procedure
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0021,    -- Anorectal
													at0022,    -- Aortic
													at0023,    -- Bariatric
													at0024,    -- Brain
													at0025,    -- Breast
													at0026,    -- Cardiac
													at0027,    -- ENT (except thyroid/parathyroid)
													at0028,    -- Foregut or hepatopancreatobiliary
													at0029,    -- Gallbladder, appendix, adrenals, or spleen
													at0030,    -- Hernia (ventral, inguinal, femoral)
													at0031,    -- Intestinal
													at0032,    -- Neck (thyroid/parathyroid)
													at0033,    -- Obstetric/gynecologic
													at0034,    -- Orthopedic and non-vascular extremity
													at0035,    -- Other abdominal
													at0036,    -- Peripheral vascular**
													at0037,    -- Skin
													at0038,    -- Spine
													at0039,    -- Non-esophageal thoracic
													at0040,    -- Vein
													at0041]    -- Urology
												}
											}
										}
									}
									ELEMENT[at0042] occurrences matches {0..1} matches {    -- MICA risk (%)
										value matches {
											DV_PROPORTION matches {
												type matches {2}
											}
										}
									}
									ELEMENT[at0043] occurrences matches {0..1} matches {    -- Comment
										value matches {
											DV_TEXT matches {*}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0004] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					CLUSTER[at0005] occurrences matches {0..1} matches {*}    -- Extension
				}
			}
		}
	}

