	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the individual symptom characteristics and exclusionary findings required to assess a patient against the various Rome IV diagnostic criteria for centrally mediated disorders of GI pain.">
			keywords = <"rome iv, abdominal, pain, caps, narcotic bowel syndrome, nbs, opioid, gastrointestinal, hyperalgesia, fgid, diagnostic, criteria, gastroenterology, chronic.", ...>
			copyright = <"© Cambio CDS">
			use = <"Use to document the criteria for specific centrally mediated GI pain disorders within a single observation. ">
			misuse = <"Not to be used for diagnosing disorders from other Rome IV categories (e.g., Bowel or Gastroduodenal disorders) or for clear organic causes of pain. Not intended for recording the final diagnosis itself; use an appropriate EVALUATION.problem_diagnosis archetype for the confirmed diagnosis.">
		>
