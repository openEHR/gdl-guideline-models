definition
	OBSERVATION[at0000] matches {    -- Rome IV Centrally Mediated Disorders of GI Pain
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									CLUSTER[at0015] occurrences matches {0..1} matches {    -- D2. NARCOTIC BOWEL SYNDROME
										items cardinality matches {1..*; unordered} matches {
											ELEMENT[at0006] occurrences matches {0..1} matches {    -- Chronic or frequently recurring abdominal pain
												value matches {
													DV_CODED_TEXT matches {
														defining_code matches {
															[local::
															at0007,    -- Yes
															at0008]    -- No
														}
													}
												}
											}
											ELEMENT[at0009] occurrences matches {0..1} matches {    -- Previous Gl diagnosis
												value matches {
													DV_CODED_TEXT matches {
														defining_code matches {
															[local::
															at0010,    -- Yes
															at0011]    -- No
														}
													}
												}
											}
											ELEMENT[at0012] occurrences matches {0..1} matches {    -- The pain worsening
												value matches {
													DV_CODED_TEXT matches {
														defining_code matches {
															[local::
															at0013,    -- Yes
															at0014]    -- No
														}
													}
												}
											}
											ELEMENT[at0016] occurrences matches {0..1} matches {    -- Marked worsening
												value matches {
													DV_CODED_TEXT matches {
														defining_code matches {
															[local::
															at0017,    -- Yes
															at0018]    -- No
														}
													}
												}
											}
											ELEMENT[at0019] occurrences matches {0..1} matches {    -- Progression of pain episodes
												value matches {
													DV_CODED_TEXT matches {
														defining_code matches {
															[local::
															at0020,    -- Yes
															at0021]    -- No
														}
													}
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0004] matches {    -- Item tree
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0005] occurrences matches {0..*} matches {    -- Extension
						include
							archetype_id/value matches {/.*/}
					}
				}
			}
		}
	}

