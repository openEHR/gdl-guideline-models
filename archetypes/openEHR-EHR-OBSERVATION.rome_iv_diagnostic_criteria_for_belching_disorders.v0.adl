definition
	OBSERVATION[at0000] matches {    -- Rome IV Diagnostic Criteria for Belching Disorders
		data matches {
			HISTORY[at0001] matches {    -- History
				events cardinality matches {1..*; unordered} matches {
					EVENT[at0002] occurrences matches {0..*} matches {    -- Any event
						data matches {
							ITEM_TREE[at0003] matches {    -- Tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0005] occurrences matches {0..1} matches {    -- Bothersome (i.e., severe enough to impact on usual activities) belching from the esophagus more than 3 days a week
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0010,    -- Yes
													at0011]    -- No
												}
											}
										}
									}
									ELEMENT[at0007] occurrences matches {0..1} matches {    -- Bothersome (i.e., severe enough to impact on usual activities) belching from the stomach more than 3 days a week
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0008,    -- Yes
													at0009]    -- No
												}
											}
										}
									}
									ELEMENT[at0012] occurrences matches {0..1} matches {    -- Diagnosic Result
										value matches {
											DV_CODED_TEXT matches {
												defining_code matches {
													[local::
													at0013,    -- Positive Diagnosis for excessive supragastric belching
													at0014,    -- Negative Diagnosis for excessive supragastric belching
													at0015,    -- Positive Diagnosis for excessive gastric belching
													at0016]    -- Negative Diagnosis for excessive gastric belching
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		protocol matches {
			ITEM_TREE[at0004] matches {*}    -- Item tree
		}
	}

