	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the presence or absence of Rome IV-defined biliary pain criteria, supporting clinicians in the diagnosis of functional biliary disorders.">
			keywords = <"biliary pain, functional gallbladder disorder, sphincter of Oddi dysfunction, rome IV criteria, right upper quadrant pain", ...>
			copyright = <"Â© Cambio CDS">
			use = <"Applicable to patients experiencing episodic right upper quadrant or epigastric pain, with no evidence of gallstones or obstructive biliary pathology on imaging.

The clinician evaluates the patient against Rome IV criteria and determines if the pattern of symptoms is consistent with functional biliary pain.">
			misuse = <"Not to be used for diagnosing biliary pain secondary to gallstones, cholecystitis, or pancreatitis.

Not intended for general abdominal pain assessment.">
		>
	>
