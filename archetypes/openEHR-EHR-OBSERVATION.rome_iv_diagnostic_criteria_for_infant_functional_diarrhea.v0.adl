	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the presence or absence of Rome IV-defined functional diarrhea criteria, assisting clinicians in differentiating benign infant diarrhea from pathological conditions.">
			keywords = <"infant diarrhea, functional diarrhea, chronic watery stools, Rome IV criteria, pediatric gastroenterology", ...>
			copyright = <"© Cambio CDS">
			use = <"Applicable to infants aged 6 to 60 months presenting with chronic, watery stools without signs of malnutrition or systemic illness.

The clinician evaluates the frequency, consistency, and impact of diarrhea, ensuring no alarm signs of an underlying organic disorder.">
			misuse = <"Not intended for acute infectious diarrhea or cases with failure to thrive, weight loss, or abnormal lab findings.

Not to be used in older children or adults.">
		>
	>
