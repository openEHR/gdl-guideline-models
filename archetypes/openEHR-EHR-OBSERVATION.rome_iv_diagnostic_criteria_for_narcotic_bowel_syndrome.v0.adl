	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the presence or absence of symptoms that meet the Rome IV diagnostic criteria for NBS, allowing clinicians to systematically document the diagnosis.">
			keywords = <"rome IV criteria, narcotic bowel syndrome, bowel, criteria, opioid-induced abdominal pain, functional gastrointestinal disorder, opioid-induced hyperalgesia", ...>
			copyright = <"© Cambio CDS">
			use = <"Applicable to patients with chronic abdominal pain and a history of prolonged opioid use.

The clinician assesses symptoms according to the Rome IV criteria and records whether the patient meets the diagnostic threshold.">
			misuse = <"Not to be used for diagnosing general functional gastrointestinal disorders outside of NBS.

Not intended for opioid withdrawal assessment.">
		>
	>
