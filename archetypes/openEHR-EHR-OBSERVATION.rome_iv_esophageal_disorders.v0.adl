	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the individual symptom characteristics and exclusionary findings required to assess a patient against the various Rome IV criteria for functional esophageal disorders.">
			keywords = <"rome iv, esophageal, disorders, functional, chest, pain, heartburn, reflux, hypersensitivity, globus, dysphagia, fgid, diagnostic, criteria", ...>
			copyright = <"Â© Cambio CDS">
			use = <"Use to document the criteria for one or more specific functional esophageal disorders.">
			misuse = <"Not to be used for diagnosing disorders from other Rome IV categories (e.g., Gastroduodenal or Bowel disorders) or for clear organic causes of symptoms like GERD, eosinophilic esophagitis, or achalasia (these are exclusionary criteria). Not intended for recording the final diagnosis itself; use an appropriate EVALUATION.problem_diagnosis archetype.">
		>
	>
