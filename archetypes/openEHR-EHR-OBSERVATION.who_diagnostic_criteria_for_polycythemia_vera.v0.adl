	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"To record the individual components (Major and Minor criteria) required to assess a patient against the WHO diagnostic criteria for Polycythemia Vera.">
			keywords = <"polycythemia vera, pv, who, diagnosis, diagnostic criteria, myeloproliferative neoplasm, mpn, jak2, erythropoietin, epo, bone marrow, hemoglobin, hematocrit, red cell mass", ...>
			copyright = <"Â© Cambio CDS">
			use = <"Use to document whether each of the WHO diagnostic criteria for Polycythemia Vera has been met. This includes hematological parameters, bone marrow morphology findings, JAK2 mutation status, and serum erythropoietin levels. Designed to be used in conjunction with a GDL guideline (WHO_PV_Dx.v0.0.1) to determine if the overall diagnostic criteria are met.">
			misuse = <"Not to be used for diagnosing other myeloproliferative neoplasms (e.g., Essential Thrombocythemia, Primary Myelofibrosis) or other hematological conditions. Not intended for staging, prognosis, or monitoring treatment response. Not to be used for recording the final diagnosis itself; use an appropriate EVALUATION archetype (e.g., EVALUATION.problem_diagnosis) for the confirmed diagnosis.">
		>
	>
