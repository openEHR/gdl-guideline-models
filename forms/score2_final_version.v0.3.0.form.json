  "name" : "Score2_Final_version",
  "description" : "SCORE2 (Systematic Coronary Risk Evaluation 2) is an advanced cardiovascular risk prediction algorithm developed to estimate the 10-year probability of both fatal and non-fatal cardiovascular disease (CVD) events. It is specifically designed for use in individuals aged 40 to 69 years who do not have pre-existing cardiovascular conditions or diabetes. Applies only to these countries classified as moderate risk: Austria, Cyprus, Finland, Germany, Greece, Iceland, Ireland, Italy, Malta, Portugal, San Marino, Slovenia, and Sweden.",
  "id" : "score2_final_version",
  "version" : "0.3.0",
  "format" : "CambioForm.v1.1",
  "templates" : [
    {
      "alias" : "T0",
      "id" : "score2.2_template",
      "version" : "4.1.0",
      "type" : "openEhrOpt14Template"
    }
  ],
  "actions" : [
    {
      "condition" : "T0_interpretation",
      "assignments" : [
        "display.text = 'Interpretation: ' + T0_interpretation.text"
      ],
      "name" : "Set display interpretation"
    },
    {
      "condition" : "!T0_gender || !T0_age || !T0_total_cholesterol || !T0_hdl_cholesterol || !T0_systolic || !T0_cigarrete_smoking",
      "assignments" : [
        "display.text = ''",
        "T0_interpretation = ''"
      ],
      "otherwise" : [
        "T0_10_year_risk_score.hidden = false"
      ],
      "name" : "Set text"
    },
    {
      "condition" : "T0_interpretation",
      "assignments" : [
        "T0_10_year_risk_score.hidden = false",
        "Results.hidden = false",
        "Recommendation.hidden = false"
      ],
      "otherwise" : [
        "T0_10_year_risk_score.hidden = true",
        "Results.hidden = true",
        "Recommendation.hidden = true"
      ],
      "name" : "Set display total score"
    }
  ],
