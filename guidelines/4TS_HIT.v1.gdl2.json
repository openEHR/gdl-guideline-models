        "id": "gt0003",
        "model_id": "openEHR-EHR-OBSERVATION.four_ts_heparin_induced_thrombocytopenia.v1",
        "template_id": "openEHR-EHR-OBSERVATION.four_ts_heparin_induced_thrombocytopenia.v1",
        "type": "INPUT",
        "elements": {
          "gt0004": {
            "id": "gt0004",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          },
          "gt0005": {
            "id": "gt0005",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0005]"
          },
          "gt0006": {
            "id": "gt0006",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0006]"
          },
          "gt0007": {
            "id": "gt0007",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0007]"
          }
        }
      },
      "gt0020": {
        "id": "gt0020",
        "model_id": "openEHR-EHR-EVALUATION.four_ts_hit_assessment.v1",
        "template_id": "openEHR-EHR-EVALUATION.four_ts_hit_assessment.v1",
        "type": "OUTPUT",
        "elements": {
          "gt0021": {
            "id": "gt0021",
            "path": "/data[at0001]/items[at0002]"
          },
          "gt0022": {
            "id": "gt0022",
            "path": "/data[at0001]/items[at0010]"
          }
        }
      }
    },
    "rules": {
      "gt0018": {
        "id": "gt0018",
        "priority": 4,
        "when": [
          "$gt0004|Thrombocytopenia|!=null",
          "$gt0005|Timing of platelet count fall|!=null",
          "$gt0006|Thrombosis or other sequelae|!=null",
          "$gt0007|Other causes for thrombocytopenia|!=null"
        ],
        "then": [
          "$gt0012|Total score|.magnitude=$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 3,
        "when": [
          "$gt0012|Total score|<=3"
        ],
        "then": [
          "$gt0021|Risk level|=0|local::at0005|Low Risk, points ≤3|",
          "$gt0022|Management|=0|local::at0011|No intervention required|"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 2,
        "when": [
          "$gt0012|Total score|<=5",
          "$gt0012|Total score|>=4"
        ],
        "then": [
          "$gt0021|Risk level|=1|local::at0006|Intermediate Risk, points 4-5|",
          "$gt0022|Management|=1|local::at0012|Intervention required|"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 1,
        "when": [
          "$gt0012|Total score|<=8",
          "$gt0012|Total score|>=6"
        ],
        "then": [
          "$gt0021|Risk level|=2|local::at0007|High Risk, points 6-8|",
          "$gt0022|Management|=1|local::at0012|Intervention required|"
        ]
      }
    }
  },
