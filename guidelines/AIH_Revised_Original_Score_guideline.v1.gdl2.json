    "rules": {
      "gt0023": {
        "id": "gt0023",
        "priority": 9,
        "when": [
          "$gt0004|Sex|!=null",
          "$gt0005|ALP:AST or ALP:ALT ratio|!=null",
          "$gt0006|Serum globulins or IgG|!=null",
          "$gt0008|AMA|!=null",
          "$gt0009|Hepatitis viral markers|!=null",
          "$gt0010|Recent or current use of hepatotoxic drugs|!=null",
          "$gt0011|Average alcohol intake|!=null",
          "$gt0012|Liver histology: interface hepatitis|!=null",
          "$gt0013|Liver histology: predominantly lymphoplasmacytic infiltrate|!=null",
          "$gt0014|Liver histology: rosetting of liver cells|!=null",
          "$gt0015|Liver histology: biliary changes|!=null",
          "$gt0016|Liver histology: other changes|!=null",
          "$gt0017|Other autoimmune disease(s)|!=null",
          "$gt0018|Response to therapy|!=null",
          "$gt0007|ANA, SMA, or LKM-1 antibody|!=null"
        ],
        "then": [
          "$gt0019|AIH score|.magnitude=$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value+$gt0010.value+$gt0011.value+$gt0012.value+$gt0013.value+$gt0014.value+$gt0015.value+$gt0016.value+$gt0017.value+$gt0018.value",
          "$gt0019|AIH score|.unit='1'",
          "$gt0019|AIH score|.precision=0"
        ]
      },
      "gt0037": {
        "id": "gt0037",
        "priority": 8,
        "when": [
          "$gt0019|AIH score|!=null",
          "$gt0012|Liver histology: interface hepatitis|==0|local::at0028|No|",
          "$gt0013|Liver histology: predominantly lymphoplasmacytic infiltrate|==0|local::at0028|No|",
          "$gt0014|Liver histology: rosetting of liver cells|==0|local::at0028|No|"
        ],
        "then": [
          "$gt0019|AIH score|.magnitude=$gt0019.magnitude-5",
          "$gt0019|AIH score|.unit='1'",
          "$gt0019|AIH score|.precision=0"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 7,
        "when": [
          "$gt0019|AIH score|!=null",
          "$gt0007|ANA, SMA, or LKM-1 antibody|==0|local::at0017|<1:40|",
          "$gt0033|Optional additional parameters|!=null"
        ],
        "then": [
          "$gt0019|AIH score|.magnitude=$gt0033.value+$gt0019.magnitude",
          "$gt0019|AIH score|.unit='1'",
          "$gt0019|AIH score|.precision=0"
        ]
      },
      "gt0027": {
        "id": "gt0027",
        "priority": 6,
        "when": [
          "$gt0019|AIH score|>15,1"
        ],
        "then": [
          "$gt0025|Diagnosis Pre-treatment|=local::at0006|Definite AIH|"
        ]
      },
      "gt0028": {
        "id": "gt0028",
        "priority": 5,
        "when": [
          "$gt0019|AIH score|>=10,1",
          "$gt0019|AIH score|<=15,1"
        ],
        "then": [
          "$gt0025|Diagnosis Pre-treatment|=local::at0007|Probable AIH|"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 4,
        "when": [
          "$gt0019|AIH score|>17,1"
        ],
        "then": [
          "$gt0026|Diagnosis Post-treatment|=local::at0009|Definite AIH|"
        ]
      },
      "gt0030": {
        "id": "gt0030",
        "priority": 3,
        "when": [
          "$gt0019|AIH score|<=17,1",
          "$gt0019|AIH score|>12,1"
        ],
        "then": [
          "$gt0026|Diagnosis Post-treatment|=local::at0010|Probable AIH|"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 2,
        "when": [
          "$gt0019|AIH score|>=10,1",
          "$gt0019|AIH score|<=12,1"
        ],
        "then": [
          "$gt0026|Diagnosis Post-treatment|=local::at0014|possible AIH, other testing recommended.|"
        ]
      },
      "gt0036": {
        "id": "gt0036",
        "priority": 1,
        "when": [
          "$gt0019|AIH score|<=9,1"
        ],
        "then": [
          "$gt0032|Diagnosis|=local::at0012|Possible AIH. Other testing recommended.|"
        ]
      }
    }
  },
  "ontology": {
    "term_definitions": {
      "en": {
        "id": "en",
        "terms": {
          "gt0001": {
            "id": "gt0001",
            "text": "Revised Original Score for Autoimmune Hepatitis (AIH)",
            "description": "Revised Original Score for Autoimmune Hepatitis (AIH) for the diagnosis of autoimmune hepatitis."
          },
          "gt0004": {
            "id": "gt0004",
            "text": "Sex",
            "description": "*"
          },
          "gt0005": {
            "id": "gt0005",
            "text": "ALP:AST or ALP:ALT ratio",
            "description": "Alkaline Phosphatase (ALP), aspartate transaminase (AST), alanine aminotransferase (ALT)."
          },
          "gt0006": {
            "id": "gt0006",
            "text": "Serum globulins or IgG",
            "description": "Times above upper limit of normal."
          },
          "gt0007": {
            "id": "gt0007",
            "text": "ANA, SMA, or LKM-1 antibody",
            "description": "Antinuclear Antibody (ANA), Smooth Muscle Antibody (SMA) , Liver kidney microsome type 1 (anti-LKM-1)."
          },
          "gt0008": {
            "id": "gt0008",
            "text": "AMA",
            "description": "Antimitochondrial Antibody (AMA)."
          },
          "gt0009": {
            "id": "gt0009",
            "text": "Hepatitis viral markers",
            "description": "Hepatitis A, B and C viruses (i.e., positive/negative for IgM anti-HAV, HBsAg, IgM anti-HBc, anti-HCV and HCV-RNA); if all are negative and viral etiology is still suspected, CMV/EBV testing may be relevant."
          },
          "gt0010": {
            "id": "gt0010",
            "text": "Recent or current use of hepatotoxic drugs",
            "description": "*"
          },
          "gt0011": {
            "id": "gt0011",
            "text": "Average alcohol intake",
            "description": "*"
          },
          "gt0012": {
            "id": "gt0012",
            "text": "Liver histology: interface hepatitis",
            "description": "*"
          },
          "gt0013": {
            "id": "gt0013",
            "text": "Liver histology: predominantly lymphoplasmacytic infiltrate",
            "description": "*"
          },
          "gt0014": {
            "id": "gt0014",
            "text": "Liver histology: rosetting of liver cells",
            "description": "If no interface hepatitis, not predominantly lymphoplasmacytic infiltrate, and no rosetting of liver cells, then subtract 5 points."
          },
          "gt0015": {
            "id": "gt0015",
            "text": "Liver histology: biliary changes",
            "description": "Bile duct changes typical of primary biliary cirrhosis or primary scleroisng cholangitis, and/or periportal ductal reaction with copper-associated protein accumulation."
          },
          "gt0016": {
            "id": "gt0016",
            "text": "Liver histology: other changes",
            "description": "Any other prominent features suggesting different etiology."
          },
          "gt0017": {
            "id": "gt0017",
            "text": "Other autoimmune disease(s)",
            "description": "In patient or 1st degree relatives."
          },
          "gt0018": {
            "id": "gt0018",
            "text": "Response to therapy",
            "description": "*"
          },
