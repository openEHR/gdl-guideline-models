        "terms": {
          "gt0001": {
            "id": "gt0001",
            "text": "Absolute Lymphocyte Count (ALC)",
            "description": "Serves as a surrogate for CD4 count in HIV patients who are naive to antiretroviral therapy in resource-limited areas"
          },
