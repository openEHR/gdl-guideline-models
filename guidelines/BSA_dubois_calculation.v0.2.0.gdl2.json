{
  "id": "BSA_dubois_calculation.v0.2.0",
  "gdl_version": "2.0",
  "concept": "gt0001",
  "language": {
    "original_language": "ISO_639-1::en"
  },
  "description": {
    "original_author": {
      "name": "Umiah Gohar",
      "email": "umiah.gohar@cambio.se",
      "organisation": "Cambio CDS",
      "date": "2025-01-09"
    },
    "lifecycle_state": "DRAFTED",
    "details": {
      "en": {
        "id": "en",
        "purpose": " To calculate estimated body surface area using the Du Bois formula.",
        "keywords": [
          "BSA",
          "body",
          "surface",
          "area",
          "Du Bois",
          "formula",
          "weight",
          "height"
        ],
        "use": "Use the most recent height and weight measurements to ensure accuracy.\n\nUse in conjunction with other assessments and patient history.\n\nUse of this formula is less precise in obese patients.\n\nUse for calculating the BSA based on the DuBois formula. The formula expresses BSA in squared meters (m2) and uses a person's weight in kilograms (kg) and height/length in centimeters (cm). \n\nThe formula, BSA (m2) = weight (kg)^0.425 × height (cm)^0.725 × 0.007184",
        "misuse": "Not to be used for calculating BSA based on other formulas.",
        "copyright": "© Cambio CDS"
      }
    },
    "other_details": {
      "references": "Du Bois D, Du Bois EF. A formula to estimate the approximate surface area if height and weight be known. 1916. Nutrition. 1989 Sep-Oct;5(5):303-11; discussion 312-3. PMID: 2520314.",
      "en": "To estimate an individual’s total external surface area using the Du Bois formula."
    }
  },
  "definition": {
    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "model_id": "openEHR-EHR-OBSERVATION.body_weight.v2",
        "template_id": "openEHR-EHR-OBSERVATION.body_weight.v2",
        "type": "INPUT",
        "elements": {
          "gt0003": {
            "id": "gt0003",
            "path": "/data[at0002]/events[at0003]/data[at0001]/items[at0004]"
          }
        }
      },
      "gt0004": {
        "id": "gt0004",
        "model_id": "openEHR-EHR-OBSERVATION.height.v2",
        "template_id": "openEHR-EHR-OBSERVATION.height.v2",
        "type": "INPUT",
        "elements": {
          "gt0005": {
            "id": "gt0005",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          }
        }
      },
      "gt0006": {
        "id": "gt0006",
        "model_id": "openEHR-EHR-OBSERVATION.body_surface_area.v1",
        "template_id": "openEHR-EHR-OBSERVATION.body_surface_area.v1",
        "type": "OUTPUT",
        "elements": {
          "gt0007": {
            "id": "gt0007",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          }
        }
      }
    },
    "rules": {
      "gt0009": {
        "id": "gt0009",
        "priority": 2,
        "when": [
          "$gt0003|Weight|.unit=='kg'",
          "$gt0005|Height/Length|.unit=='cm'"
        ],
        "then": [
          "$gt0007|Body Surface Area|.magnitude=(($gt0003|Weight|.magnitude^0.425)*($gt0005|Height/Length|.magnitude^0.725))*0.007184",
          "$gt0007|Body Surface Area|.precision=2",
          "$gt0007|Body Surface Area|.unit='m2'"
        ]
      },
      "gt0010": {
        "id": "gt0010",
        "priority": 1,
        "when": [
          "$gt0003|Weight|.unit=='[lb_av]'",
          "$gt0005|Height/Length|.unit=='[in_i]'"
        ],
        "then": [
          "$gt0007|Body Surface Area|.magnitude=(((($gt0003|Weight|.magnitude/2.2046)^0.425)*(($gt0005|Height/Length|.magnitude*2.54)^0.725))*0.007184)*10.764",
          "$gt0007|Body Surface Area|.precision=2",
          "$gt0007|Body Surface Area|.unit='[ft_i]2'"
        ]
      }
    }
  },
