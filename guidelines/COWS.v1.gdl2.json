      "gt0016": {
        "id": "gt0016",
        "model_id": "openEHR-EHR-OBSERVATION.cows_score_for_opiate_withdrawal.v1",
        "template_id": "openEHR-EHR-OBSERVATION.cows_score_for_opiate_withdrawal.v1",
        "type": "OUTPUT",
        "elements": {
          "gt0017": {
            "id": "gt0017",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          },
