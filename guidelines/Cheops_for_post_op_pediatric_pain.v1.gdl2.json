    "rules": {
      "gt0023": {
        "id": "gt0023",
        "priority": 3,
        "when": [
          "$gt0011|Cry|!=null",
          "$gt0012|Facial|!=null",
          "$gt0013|Child verbal|!=null",
          "$gt0014|Torso|!=null",
          "$gt0015|Legs|!=null",
          "$gt0016|Touch|!=null"
        ],
        "then": [
          "$gt0010|Total Score|.magnitude=$gt0011.value+$gt0012.value+$gt0013.value+$gt0014.value+$gt0015.value+$gt0016.value"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 2,
        "when": [
          "$gt0010|Total Score|<5"
        ],
        "then": [
          "$gt0025|Score interpretation|=0|local::at0003|Analgesia should not be needed|"
        ]
      },
      "gt0027": {
        "id": "gt0027",
        "priority": 1,
        "when": [
          "$gt0010|Total Score|>=5"
        ],
        "then": [
          "$gt0025|Score interpretation|=1|local::at0004|Consider analgesia|"
        ]
      }
    }
  },
