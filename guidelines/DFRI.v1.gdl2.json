    "rules": {
      "gt0048": {
        "id": "gt0048",
        "priority": 3,
        "when": [
          "$gt0016|DFRI score|==null",
          "$gt0019|Known previous falls|!=null",
          "$gt0021|Tranquilizers/sedatives|!=null",
          "$gt0022|Diuretics|!=null",
          "$gt0023|Antihypertensives (other than diuretics)|!=null",
          "$gt0024|Antiparkinsonian drugs|!=null",
          "$gt0025|Antidepressants|!=null",
          "$gt0027|Visual impairment|!=null",
          "$gt0028|Hearing impairment|!=null",
          "$gt0029|Motor impairment|!=null",
          "$gt0030|Mental state|!=null",
          "$gt0031|Ability to walk|!=null"
        ],
        "then": [
          "$gt0016|DFRI score|.magnitude=$gt0019.value+$gt0021.value+$gt0022.value+$gt0023.value+$gt0024.value+$gt0025.value+$gt0027.value+$gt0028.value+$gt0029.value+$gt0030.value+$gt0031.value"
        ]
      },
      "gt0051": {
        "id": "gt0051",
        "priority": 2,
        "when": [
          "$gt0016|Total score|<=2"
        ],
        "then": [
          "$gt0050|Risk group|=0|local::at0003|Low-risk group|"
        ]
      },
      "gt0052": {
        "id": "gt0052",
        "priority": 1,
        "when": [
          "$gt0016|Total score|>=3"
        ],
        "then": [
          "$gt0050|Risk group|=1|local::at0004|High-risk group|"
        ]
      }
    }
