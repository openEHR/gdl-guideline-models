    "rules": {
      "gt0041": {
        "id": "gt0041",
        "priority": 13,
        "when": [
          "$gt0026|Birthdate|!=null"
        ],
        "then": [
          "$gt0015|Age variable|.magnitude=($currentDateTime.year-$gt0026.year)*2"
        ]
      },
      "gt0042": {
        "id": "gt0042",
        "priority": 12,
        "when": [
          "$gt0028|Systolic|.unit=='mm[Hg]'",
          "$gt0028|Systolic|!=null"
        ],
        "then": [
          "$gt0016|Sys BP variable|.magnitude=$gt0028.magnitude"
        ]
      },
      "gt0043": {
        "id": "gt0043",
        "priority": 11,
        "when": [
          "$gt0030|Heart Rate|.unit=='/min'",
          "$gt0030|Heart Rate|!=null"
        ],
        "then": [
          "$gt0017|Heart Rate variable|.magnitude=$gt0030.magnitude"
        ]
      },
      "gt0044": {
        "id": "gt0044",
        "priority": 10,
        "when": [
          "$gt0032|SaO2|!=null"
        ],
        "then": [
          "$gt0018|O2 Saturation variable|.magnitude=$gt0032.magnitude*2"
        ]
      },
      "gt0040": {
        "id": "gt0040",
        "priority": 9,
        "when": [
          "$gt0037|Creatinine|!=null",
          "$gt0037|Creatinine|.unit=='mg/dl'"
        ],
        "then": [
          "$gt0019|Creatinine variable|.magnitude=$gt0037.magnitude*20"
        ]
      },
      "gt0045": {
        "id": "gt0045",
        "priority": 8,
        "when": [
          "$gt0036|Potassium|.magnitude<4",
          "$gt0036|Potassium|.unit=='mEq/l'",
          "$gt0036|Potassium|!=null"
        ],
        "then": [
          "$gt0020|Potassium variable|=5|local::at0015|<4|"
        ]
      },
      "gt0046": {
        "id": "gt0046",
        "priority": 7,
        "when": [
          "$gt0036|Potassium|.magnitude>=4",
          "$gt0036|Potassium|.magnitude<=4.5",
          "$gt0036|Potassium|.unit=='mEq/l'",
          "$gt0036|Potassium|!=null"
        ],
        "then": [
          "$gt0020|Potassium variable|=0|local::at0014|4-4.5|"
        ]
      },
      "gt0047": {
        "id": "gt0047",
        "priority": 6,
        "when": [
          "$gt0036|Potassium|.magnitude>4.5",
          "$gt0036|Potassium|.unit=='mEq/l'",
          "$gt0036|Potassium|!=null"
        ],
        "then": [
          "$gt0020|Potassium variable|=30|local::at0016|>4.5|"
        ]
      },
      "gt0052": {
        "id": "gt0052",
        "priority": 1,
        "then": [
          "$gt0024|Total score|.magnitude=$gt0015-$gt0016+$gt0017-$gt0018.magnitude+$gt0019.magnitude+$gt0009.value+$gt0010.value+$gt0011.value+$gt0020.value+$gt0013.value+12"
        ]
      }
    }
