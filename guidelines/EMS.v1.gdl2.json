    "rules": {
      "gt0017": {
        "id": "gt0017",
        "priority": 4,
        "when": [
          "$gt0003|Lying to sitting|!=null",
          "$gt0004|Sitting to lying|!=null",
          "$gt0005|Sitting to standing|!=null",
          "$gt0006|Standing|!=null",
          "$gt0007|Gait|!=null",
          "$gt0008|Timed walk|!=null",
          "$gt0009|Functional reach|!=null"
        ],
        "then": [
          "$gt0011|Total score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 3,
        "when": [
          "$gt0011|Total score|>=0",
          "$gt0011|Total score|<=9"
        ],
        "then": [
          "$gt0013|Interpretation|.value=$gt0014.term"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 2,
        "when": [
          "$gt0011|Total score|>=10",
          "$gt0011|Total score|<=13"
        ],
        "then": [
          "$gt0013|Interpretation|.value=$gt0015.term"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 1,
        "when": [
          "$gt0011|Total score|>=14",
          "$gt0011|Total score|<=20"
        ],
        "then": [
          "$gt0013|Interpretation|.value=$gt0016.term"
        ]
      }
    }
