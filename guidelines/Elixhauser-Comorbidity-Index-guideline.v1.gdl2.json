    "rules": {
      "gt0036": {
        "id": "gt0036",
        "priority": 16,
        "when": [
          "$gt0004|Congestive heart failure|!=null",
          "$gt0005|Cardiac arrhythmias|!=null",
          "$gt0006|Valvular disease|!=null",
          "$gt0007|Pulmonary circulation disorders|!=null",
          "$gt0008|Peripheral vascular disorders|!=null",
          "$gt0009|Hypertension|!=null",
          "$gt0010|Paralysis|!=null",
          "$gt0011|Neurodegenerative disorders|!=null",
          "$gt0012|Chronic pulmonary disease|!=null",
          "$gt0013|Diabetes|!=null",
          "$gt0014|Hypothyroidism|!=null",
          "$gt0015|Renal failure|!=null",
          "$gt0016|Liver disease|!=null",
          "$gt0017|Peptic ulcer disease, no bleeding|!=null",
          "$gt0018|AIDS/HIV|!=null",
          "$gt0019|Lymphoma|!=null",
          "$gt0020|Metastatic cancer|!=null",
          "$gt0021|Solid tumor without metastasis|!=null",
          "$gt0022|Rheumatoid arthritis/collagen vascular diseases|!=null",
          "$gt0023|Coagulopathy|!=null",
          "$gt0024|Obesity|!=null",
          "$gt0025|Weight loss|!=null",
          "$gt0026|Fluid and electrolyte disorders|!=null",
          "$gt0027|Blood loss anemia|!=null",
          "$gt0028|Deficiency anemia|!=null",
          "$gt0029|Alcohol abuse|!=null",
          "$gt0030|Drug abuse|!=null",
          "$gt0031|Psychosis|!=null",
          "$gt0032|Depressions|!=null"
        ],
        "then": [
          "$gt0034|ECI score|.magnitude=$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value+$gt0010.value+$gt0011.value+$gt0012.value+$gt0013.value+$gt0014.value+$gt0015.value+$gt0016.value+$gt0017.value+$gt0018.value+$gt0019.value+$gt0020.value+$gt0021.value+$gt0022.value+$gt0023.value+$gt0024.value+$gt0025.value+$gt0026.value+$gt0027.value+$gt0028.value+$gt0029.value+$gt0030.value+$gt0031.value+$gt0032.value"
        ]
      },
      "gt0039": {
        "id": "gt0039",
        "priority": 13,
        "when": [
          "$gt0034|ECI score|.magnitude>='-19'",
          "$gt0034|ECI score|.magnitude<'-18'"
        ],
        "then": [
          "$gt0035|Probablity of inpatient death|='0.37%'"
        ]
      },
      "gt0041": {
        "id": "gt0041",
        "priority": 12,
