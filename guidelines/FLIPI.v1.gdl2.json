    "rules": {
      "gt0019": {
        "id": "gt0019",
        "priority": 9,
        "when": [
          "$gt0014|Birthdate|!=null"
        ],
        "then": [
          "$gt0016|Age|.unit='a'",
          "$gt0016|Age|.magnitude=$currentDateTime.year-$gt0014.year"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 8,
        "when": [
          "$gt0016|Age|<=60,a"
        ],
        "then": [
          "$gt0007|Age > 60 years|=0|local::at0013|No|"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 7,
        "when": [
          "$gt0016|Age|>60,a"
        ],
        "then": [
          "$gt0007|Age > 60 years|=1|local::at0014|Yes|"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 6,
        "when": [
          "$gt0018|Haemoglobin|>=120,gm/l"
        ],
        "then": [
          "$gt0010|Hemoglobin <120 g/L or 12 g/dL|=0|local::at0011|No|"
        ]
      },
      "gt0021": {
        "id": "gt0021",
        "priority": 5,
        "when": [
          "$gt0018|Haemoglobin|<120,gm/l"
        ],
        "then": [
          "$gt0010|Hemoglobin <120 g/L or 12 g/dL|=1|local::at0012|Yes|"
        ]
      },
      "gt0030": {
        "id": "gt0030",
        "priority": 4,
        "when": [
          "$gt0003|>4 nodal sites|!=null",
          "$gt0004|LDH elevated|!=null",
          "$gt0005|Stage III-IV|!=null",
          "$gt0007|Age > 60 years|!=null",
          "$gt0010|Hemoglobin <120 g/L or 12 g/dL|!=null"
        ],
        "then": [
          "$gt0012|Total score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0007.value+$gt0010.value"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 3,
        "when": [
          "$gt0012|Total score|<=1"
        ],
        "then": [
          "$gt0032|Risk Group|=0|local::at0003|Low|",
          "$gt0033|10 Year Overall Survival|=0|local::at0007|70%|"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 2,
        "when": [
          "$gt0012|Total score|==2"
        ],
        "then": [
          "$gt0032|Risk Group|=1|local::at0004|Intermediate|",
          "$gt0033|10 Year Overall Survival|=1|local::at0008|50%|"
        ]
      },
      "gt0036": {
        "id": "gt0036",
        "priority": 1,
        "when": [
          "$gt0012|Total score|>=3"
        ],
        "then": [
          "$gt0032|Risk Group|=2|local::at0006|High|",
          "$gt0033|10 Year Overall Survival|=2|local::at0009|35%|"
        ]
      }
    }
  },
