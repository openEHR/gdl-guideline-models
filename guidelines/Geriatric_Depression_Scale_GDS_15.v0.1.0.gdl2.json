    "rules": {
      "gt0049": {
        "id": "gt0049",
        "priority": 5,
        "when": [
          "$gt0030|Are you basically satisfied with your life?|!=null",
          "$gt0031|Have you dropped many of your activities and interests?|!=null",
          "$gt0032|Do you feel that your life is empty?|!=null",
          "$gt0033|Do you often get bored?|!=null",
          "$gt0034|Are you in good spirits most of the time?|!=null",
          "$gt0035|Are you afraid that something bad is going to happen to you?|!=null",
          "$gt0036|Do you feel happy most of the time?|!=null",
          "$gt0037|Do you often feel helpless?|!=null",
          "$gt0038|Do you prefer to stay at home, rather than going out and doing new things?|!=null",
          "$gt0039|Do you feel you have more problems with memory than most?|!=null",
          "$gt0040|Do you think it is wonderful to be alive now?|!=null",
          "$gt0041|Do you feel pretty worthless the way you are now?|!=null",
          "$gt0042|Do you feel full of energy?|!=null",
          "$gt0043|Do you feel that your situation is hopeless?|!=null",
          "$gt0044|Do you think that most people are better off than you are?|!=null"
        ],
        "then": [
          "$gt0046|Total score|.magnitude=$gt0030|Are you basically satisfied with your life?|.value+$gt0031|Have you dropped many of your activities and interests?|.value+$gt0032|Do you feel that your life is empty?|.value+$gt0033|Do you often get bored?|.value+$gt0034|Are you in good spirits most of the time?|.value+$gt0035|Are you afraid that something bad is going to happen to you?|.value+$gt0036|Do you feel happy most of the time?|.value+$gt0037|Do you often feel helpless?|.value+$gt0038|Do you prefer to stay at home, rather than going out and doing new things?|.value+$gt0039|Do you feel you have more problems with memory than most?|.value+$gt0040|Do you think it is wonderful to be alive now?|.value+$gt0041|Do you feel pretty worthless the way you are now?|.value+$gt0042|Do you feel full of energy?|.value+$gt0043|Do you feel that your situation is hopeless?|.value+$gt0044|Do you think that most people are better off than you are?|.value"
        ]
      },
      "gt0050": {
        "id": "gt0050",
        "priority": 4,
        "when": [
          "$gt0046|Total score|<=4"
        ],
        "then": [
          "$gt0048|Interpretation|=local::at0005|Absence of clinically significant depressive symptoms|"
        ]
      },
      "gt0051": {
        "id": "gt0051",
        "priority": 3,
        "when": [
          "$gt0046|Total score|>4",
          "$gt0046|Total score|<8"
        ],
        "then": [
          "$gt0048|Interpretation|=local::at0006|Suggests mild depression|"
        ]
      },
      "gt0052": {
        "id": "gt0052",
        "priority": 2,
        "when": [
          "$gt0046|Total score|>7",
          "$gt0046|Total score|<10"
        ],
        "then": [
          "$gt0048|Interpretation|=local::at0007|Suggests moderate depression|"
        ]
      },
      "gt0053": {
        "id": "gt0053",
        "priority": 1,
        "when": [
          "$gt0046|Total score|>=10"
        ],
        "then": [
          "$gt0048|Interpretation|=local::at0008|Suggests severe depression|"
        ]
      }
