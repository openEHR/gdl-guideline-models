    "rules": {
      "gt0016": {
        "id": "gt0016",
        "priority": 3,
        "when": [
          "$gt0003|PaO₂ <59.3 mmHg (7.9 kPa)|!=null",
          "$gt0004|Age >55 years|!=null",
          "$gt0005|WBC >15 x 10³/µL (10⁹/L)|!=null",
          "$gt0006|Calcium <8 mg/dL (2 mmol/L)|!=null",
          "$gt0007|Urea >44.8 mg/dL (16 mmol/L)|!=null",
          "$gt0008|LDH >600 IU/L|!=null",
          "$gt0009|Albumin <3.2 g/dL (32 g/L)|!=null",
          "$gt0010|Glucose >180 mg/dL (10 mmol/L)|!=null"
        ],
        "then": [
          "$gt0013|Total score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value+$gt0010.value"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 2,
        "when": [
          "$gt0013|Total score|<3"
        ],
        "then": [
          "$gt0015|Likelihood of severe pancreatitis|=local::at0014|Low risk for severe pancreatitis|"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 1,
        "when": [
          "$gt0013|Total score|>=3"
        ],
        "then": [
          "$gt0015|Likelihood of severe pancreatitis|=local::at0015|High risk for severe pancreatitis|"
        ]
      }
    }
