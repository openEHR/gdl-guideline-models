    "rules": {
      "gt0022": {
        "id": "gt0022",
        "priority": 8,
        "when": [
          "$gt0011|I still enjoy the things I used to enjoy|!=null",
          "$gt0017|I can enjoy a good book or radio or TV program|!=null",
          "$gt0016|I look forward with enjoyment to things|!=null",
          "$gt0015|I have lost interest in my appearance|!=null",
          "$gt0014|I feel as if I am slowed down|!=null",
          "$gt0013|I feel cheerful|!=null",
          "$gt0012|I can laugh and see the funny side of things|!=null"
        ],
        "then": [
          "$gt0054|Depression total score|.magnitude=$gt0011.value+$gt0017.value+$gt0016.value+$gt0015.value+$gt0014.value+$gt0013.value+$gt0012.value"
        ]
      },
      "gt0071": {
        "id": "gt0071",
        "priority": 7,
        "when": [
          "$gt0004|I feel tense or 'wound up'|!=null",
          "$gt0005|I get a sort of frightened feeling as if something awful is about to happen|!=null",
          "$gt0006|Worrying thoughts go through my mind|!=null",
          "$gt0007|I can sit at ease and feel relaxed|!=null",
          "$gt0008|I get a sort of frightened feeling like `butterflies´ in the stomach|!=null",
          "$gt0009|I feel restless as I have to be on the move|!=null",
          "$gt0010|I get sudden feelings of panic|!=null"
        ],
        "then": [
          "$gt0053|Anxiety total score|.magnitude=$gt0010.value+$gt0008.value+$gt0009.value+$gt0006.value+$gt0007.value+$gt0005.value+$gt0004.value"
        ]
      },
      "gt0075": {
        "id": "gt0075",
        "priority": 6,
        "when": [
          "$gt0054|Depression total score|<=7"
        ],
