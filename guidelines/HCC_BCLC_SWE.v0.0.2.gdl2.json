    "rules" : {
      "gt0022" : {
        "id" : "gt0022",
        "priority" : 13,
        "when" : [
          "$gt0007|Diffuse tumour growth present|==true||$gt0006|Extrahepatic metastasis present|==true||$gt0027|Macroscopic tumour thrombus present|==true",
          "$gt0017|ECOG performance status|==1|local::at0006|Restricted in physically strenuous activity but ambulatory and able to carry out work of a light or sedentary nature, e.g., light house work, office work.|||$gt0017|ECOG performance status|==0|local::at0005|Fully active, able to carry on all pre-disease performance without restriction.|"
        ],
        "then" : [
          "$gt0019|Stage|=local::at0007|Advanced|"
        ]
      },
      "gt0024" : {
        "id" : "gt0024",
        "priority" : 12,
        "when" : [
          "$gt0005|Tumour confined to liver|==true",
          "$gt0006|Extrahepatic metastasis present|==false",
          "$gt0011|Tumour burden within transplant criteria|==false",
          "$gt0017|ECOG performance status|==1|local::at0006|Restricted in physically strenuous activity but ambulatory and able to carry out work of a light or sedentary nature, e.g., light house work, office work.|||$gt0017|ECOG performance status|==0|local::at0005|Fully active, able to carry on all pre-disease performance without restriction.|",
          "$gt0009|Severe comorbidity limiting therapy|==false",
          "$gt0027|Macroscopic tumour thrombus present|==false",
          "$gt0004|Number of tumours|==local::at0010|multifocal (>3)|"
        ],
        "then" : [
          "$gt0019|Stage|=local::at0006|Intermediate|"
        ]
      },
      "gt0023" : {
        "id" : "gt0023",
        "priority" : 11,
        "when" : [
          "$gt0005|Tumour confined to liver|==true",
          "$gt0006|Extrahepatic metastasis present|==false",
          "$gt0017|ECOG performance status|==1|local::at0006|Restricted in physically strenuous activity but ambulatory and able to carry out work of a light or sedentary nature, e.g., light house work, office work.|||$gt0017|ECOG performance status|==0|local::at0005|Fully active, able to carry on all pre-disease performance without restriction.|",
          "$gt0009|Severe comorbidity limiting therapy|==false",
          "$gt0027|Macroscopic tumour thrombus present|==false"
        ],
        "then" : [
          "$gt0019|Stage|=local::at0005|Early|"
        ]
      },
      "gt0021" : {
        "id" : "gt0021",
        "priority" : 10,
        "when" : [
          "($gt0017|ECOG performance status|==2|local::at0007|Ambulatory and capable of all selfcare but unable to carry out any work activities; up and about more than 50% of waking hours.|||$gt0017|ECOG performance status|==3|local::at0008|Capable of only limited selfcare; confined to bed or chair more than 50% of waking hours.|||$gt0017|ECOG performance status|==4|local::at0009|Completely disabled; cannot carry on any selfcare; totally confined to bed or chair.|||$gt0017|ECOG performance status|==5|local::at0010|Dead|)&&$gt0009|Severe comorbidity limiting therapy|==true",
          "$gt0015|Child Pugh total score|>=8&&$gt0010|Transplant candidate|==false"
        ],
        "then" : [
          "$gt0019|Stage|=local::at0008|Terminal|",
          "$gt0020|Treatment recommendation|=local::at0016|Best supportive care|"
        ]
      },
      "gt0025" : {
        "id" : "gt0025",
        "priority" : 9,
        "when" : [
          "$gt0007|Diffuse tumour growth present|==true||$gt0006|Extrahepatic metastasis present|==true||$gt0027|Macroscopic tumour thrombus present|==true",
          "$gt0017|ECOG performance status|==1|local::at0006|Restricted in physically strenuous activity but ambulatory and able to carry out work of a light or sedentary nature, e.g., light house work, office work.|||$gt0017|ECOG performance status|==0|local::at0005|Fully active, able to carry on all pre-disease performance without restriction.|",
          "$gt0015|Child Pugh total score|<=7"
        ],
        "then" : [
          "$gt0019|Stage|=local::at0007|Advanced|",
          "$gt0020|Treatment recommendation|=local::at0015|Systemic therapy|"
        ]
      },
      "gt0026" : {
        "id" : "gt0026",
        "priority" : 8,
        "when" : [
          "$gt0015|Child Pugh total score|<=7",
          "$gt0027|Macroscopic tumour thrombus present|==true&&$gt0006|Extrahepatic metastasis present|==false&&$gt0007|Diffuse tumour growth present|==false",
          "$gt0017|ECOG performance status|==1|local::at0006|Restricted in physically strenuous activity but ambulatory and able to carry out work of a light or sedentary nature, e.g., light house work, office work.|||$gt0017|ECOG performance status|==0|local::at0005|Fully active, able to carry on all pre-disease performance without restriction.|"
        ],
        "then" : [
          "$gt0020|Treatment recommendation|=local::at0014|SIRT|"
        ]
      },
      "gt0028" : {
        "id" : "gt0028",
        "priority" : 7,
        "when" : [
          "$gt0019|Stage|==local::at0006|Intermediate|",
          "$gt0015|Child Pugh total score|<=7",
          "$gt0027|Macroscopic tumour thrombus present|==true&&$gt0008|Portal vein status|==local::at0017|main trunk thrombosis|"
        ],
        "then" : [
          "$gt0020|Treatment recommendation|=local::at0014|SIRT|"
        ]
      },
      "gt0029" : {
        "id" : "gt0029",
        "priority" : 6,
        "when" : [
          "$gt0019|Stage|==local::at0006|Intermediate|",
          "$gt0015|Child Pugh total score|<=7",
          "$gt0008|Portal vein status|==local::at0015|none|||$gt0008|Portal vein status|==local::at0016|peripheral thrombosis|"
        ],
        "then" : [
          "$gt0020|Treatment recommendation|=local::at0013|TACE|"
        ]
      },
      "gt0030" : {
        "id" : "gt0030",
        "priority" : 5,
        "when" : [
          "$gt0019|Stage|==local::at0006|Intermediate|",
          "$gt0015|Child Pugh total score|<=7",
          "$gt0012|Downstaging successful|==true"
        ],
        "then" : [
          "$gt0020|Treatment recommendation|=local::at0012|Transplantation|"
        ]
      },
      "gt0031" : {
        "id" : "gt0031",
        "priority" : 4,
        "when" : [
          "$gt0019|Stage|==local::at0005|Early|",
          "$gt0015|Child Pugh total score|>=7",
          "$gt0011|Tumour burden within transplant criteria|==true"
        ],
        "then" : [
          "$gt0020|Treatment recommendation|=local::at0012|Transplantation|"
        ]
      },
      "gt0032" : {
        "id" : "gt0032",
        "priority" : 3,
        "when" : [
          "$gt0019|Stage|==local::at0005|Early|",
          "$gt0015|Child Pugh total score|<=6",
          "$gt0004|Number of tumours|==local::at0008|single|||$gt0004|Number of tumours|==local::at0009|few (2-3)|"
        ],
        "then" : [
          "$gt0020|Treatment recommendation|=local::at0011|Resection|"
        ]
      },
      "gt0033" : {
        "id" : "gt0033",
        "priority" : 2,
        "when" : [
          "$gt0019|Stage|==local::at0005|Early|",
          "$gt0003|Largest tumour diameter|<3",
          "$gt0013|Cirrhosis present|==false"
        ],
        "then" : [
          "$gt0020|Treatment recommendation|=local::at0011|Resection|"
        ]
      },
      "gt0034" : {
        "id" : "gt0034",
        "priority" : 1,
        "when" : [
          "$gt0019|Stage|==local::at0005|Early|",
          "$gt0003|Largest tumour diameter|<3",
          "$gt0015|Child Pugh total score|<=7"
        ],
        "then" : [
          "$gt0020|Treatment recommendation|=local::at0010|Ablation|"
        ]
      }
    }
