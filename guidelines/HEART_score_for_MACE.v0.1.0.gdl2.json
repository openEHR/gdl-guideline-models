        "when" : [
          "$gt0052|Age|>65,a"
        ],
        "then" : [
          "$gt0054|Age group|=2|local::at0022|> 65 yrs|"
        ]
      },
      "gt0027" : {
        "id" : "gt0027",
        "priority" : 6,
        "when" : [
          "$gt0004|History|!=null",
          "$gt0005|EKG|!=null",
          "$gt0008|Risk Factors|!=null",
          "$gt0009|Initial Troponin|!=null",
          "$gt0054|Age group|!=null"
        ],
        "then" : [
          "$gt0014|Total score|.magnitude=$gt0004|History|.value+$gt0005|EKG|.value+$gt0008|Risk Factors|.value+$gt0009|Initial Troponin|.value+$gt0054|Age group|.value"
        ]
      },
      "gt0032" : {
        "id" : "gt0032",
        "priority" : 5,
        "when" : [
          "$gt0014|Total score|<=3"
        ],
        "then" : [
          "$gt0038|Risk assessment|=$gt0048|Low risk|.term",
          "$gt0031|Risk Percentage|=0|local::at0010|0.9-1.7% risk of MACE|",
          "$gt0030|Management|=0|local::at0006|Safe for discharge with follow-up.|"
        ]
      },
      "gt0033" : {
        "id" : "gt0033",
        "priority" : 4,
        "when" : [
          "$gt0014|Total score|<=6",
          "$gt0014|Total score|>=4"
        ],
        "then" : [
          "$gt0038|Risk assessment|=$gt0049|Moderate risk|.term",
          "$gt0031|Risk Percentage|=1|local::at0011|12-16.6% risk of MACE|",
          "$gt0030|Management|=1|local::at0007|Consider admission and further testing.|"
        ]
      },
      "gt0034" : {
        "id" : "gt0034",
        "priority" : 3,
        "when" : [
          "$gt0014|Total score|>=7"
        ],
        "then" : [
          "$gt0038|Risk assessment|=$gt0050|High risk|.term",
          "$gt0031|Risk Percentage|=2|local::at0012|50-65% risk of MACE|",
          "$gt0030|Management|=2|local::at0008|Urgent evaluation and possible invasive management.|"
        ]
      },
      "gt0036" : {
        "id" : "gt0036",
        "priority" : 2,
        "when" : [
          "$gt0005|EKG|==2|local::at0019|Significant ST depression |"
        ],
        "then" : [
          "$gt0047|Comment|=$gt0039|If EKG is highly suspicious, a further workup and admission is recommended even with a low HEART Score.|.term"
        ]
      },
      "gt0041" : {
        "id" : "gt0041",
        "priority" : 1,
        "when" : [
          "$gt0009|Initial Troponin|!=0|local::at0026|≤ normal limit |"
        ]
      }
    }
