    "original_language": "ISO_639-1::en"
  },
  "description": {
    "original_author": {
      "date": "2019-11-02",
      "name": "Winner Ng",
      "organisation": "Cambio CDS",
      "email": "dokter.winner@gmail.com"
    },
    "lifecycle_state": "Author draft",
    "details": {
      "id": {
        "id": "id",
        "purpose": "Alat bantu untuk memprediksi readmisi dalam 30 hari pasca pemulangan.",
        "keywords": [
          "readmisi",
          "prediksi",
          "rumah sakit",
          "skor HOSPITAL"
        ],
        "use": "Kriterianya antara lain:\n- (H) - kadar Hemoglobin saat pemulangan <12g/dL: 1 poin\n- (O) - pemulangan dari layanan Onkologi: 2 poin\n- (S) - kadar Sodium (Natrium) saat pemulangan <135mmol/L: 1 poin\n- (P) - Prosedur yang dijalani selama perawatan: 1 poin\n- (IT) - Indeks Tipe admisi, jika urgensi atau emergensi: 1poin\n- (A) - jumlah Admisi dalam tahun sebelumnya,0-1: 0 poin, 2-5: 2 poin, >5: 5 poin\n- (L) - Lama hari perawatan >=5 hari, 2 poin",
        "misuse": "Tidak untuk digunakan pada pasien pediatrik.",
        "copyright": "@CambioCDS"
      },
      "en": {
        "id": "en",
        "purpose": "To record and predict 30-day of potentially avoidable readmission on adult patient, both for medical and surgical cases.",
        "keywords": [
          "readmission",
          "prediction",
          "hospital",
          "score"
        ],
        "use": "The score was calculated based on the following criteria:\n- (H) - Haemoglobin level at discharge <12g/dL: 1 point\n- (O) - discharge from an Oncology service : 2 points\n- (S) - Sodium level at discharge <135 mmol/L: 1 point\n- (P) - Procedure during hospital stay: 1 point\n- (IT) - Index of admission Type, if urgent or emergent: 1 point\n- (A) - number of hospital Admission in the previous year, 0-1: 0 point, 2-5: 2 points, >5: 5 points\n- (L) - Length of stay >=5 days: 2 points",
        "misuse": "Not to be used in pediatric patient.",
        "copyright": "@Cambio CDS"
      }
    },
    "other_details": {
      "references": "Donzé JD, Williams MV, Robinson EJ, Zimlichman E, Aujesky D, Vasilevskis EE, et al. International Validity of the HOSPITAL Score to Predict 30-Day Potentially Avoidable Hospital Readmissions. JAMA Internal Medicine. 2016;176(4):496–502."
    }
  },
  "definition": {
    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "model_id": "openEHR-EHR-EVALUATION.hospital_readmission_score.v0",
        "template_id": "openEHR-EHR-EVALUATION.hospital_readmission_score.v0",
        "type": "INPUT",
        "elements": {
          "gt0003": {
            "id": "gt0003",
            "path": "/data[at0001]/items[at0002]"
          },
          "gt0004": {
            "id": "gt0004",
            "path": "/data[at0001]/items[at0005]"
          },
          "gt0005": {
            "id": "gt0005",
            "path": "/data[at0001]/items[at0008]"
          },
          "gt0006": {
            "id": "gt0006",
            "path": "/data[at0001]/items[at0011]"
          },
          "gt0007": {
            "id": "gt0007",
            "path": "/data[at0001]/items[at0014]"
          },
          "gt0008": {
            "id": "gt0008",
            "path": "/data[at0001]/items[at0017]"
          },
          "gt0009": {
            "id": "gt0009",
            "path": "/data[at0001]/items[at0021]"
          }
        }
      },
      "gt0010": {
        "id": "gt0010",
        "model_id": "openEHR-EHR-EVALUATION.hospital_readmission_score.v0",
        "template_id": "openEHR-EHR-EVALUATION.hospital_readmission_score.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0011": {
            "id": "gt0011",
            "path": "/data[at0001]/items[at0028]"
          },
          "gt0013": {
            "id": "gt0013",
            "path": "/data[at0001]/items[at0024]"
          }
        }
      }
    },
    "rules": {
      "gt0014": {
        "id": "gt0014",
        "priority": 4,
        "then": [
          "$gt0011|Total score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 3,
        "when": [
          "$gt0011|Total score|<=4"
        ],
        "then": [
          "$gt0013|Risk of 30-day Potentially Avoidable Readmissions|=local::at0025|Low|"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 2,
        "when": [
          "($gt0011|Total score|==5)||($gt0011|Total score|==6)"
        ],
        "then": [
          "$gt0013|Risk of 30-day Potentially Avoidable Readmissions|=local::at0026|Intermediate|"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 1,
        "when": [
          "$gt0011|Total score|>=7"
        ],
        "then": [
          "$gt0013|Risk of 30-day Potentially Avoidable Readmissions|=local::at0027|High|"
        ]
      }
    }
  },
