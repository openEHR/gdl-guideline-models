    "rules": {
      "gt0008": {
        "id": "gt0008",
        "priority": 5,
        "when": [
          "$gt0004|Signs/Symptoms|!=null"
        ],
        "then": [
          "$gt0006|Resulting score|.magnitude=$gt0004.value"
        ]
      },
      "gt0011": {
        "id": "gt0011",
        "priority": 4,
        "when": [
