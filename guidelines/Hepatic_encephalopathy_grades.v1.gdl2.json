        "when": [
          "$gt0006|Resulting score|==2"
        ],
        "then": [
          "$gt0010|Grades|=2|local::at0004|Grade II|"
        ]
      },
      "gt0013": {
        "id": "gt0013",
        "priority": 2,
        "when": [
          "$gt0006|Resulting score|==3"
        ],
        "then": [
          "$gt0010|Grades|=3|local::at0005|Grade III|"
        ]
      },
      "gt0014": {
        "id": "gt0014",
        "priority": 1,
        "when": [
          "$gt0006|Resulting score|==4"
        ],
        "then": [
          "$gt0010|Grades|=4|local::at0006|Grade IV|"
        ]
      }
    }
