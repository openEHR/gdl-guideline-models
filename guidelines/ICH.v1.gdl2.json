    "rules": {
      "gt0022": {
        "id": "gt0022",
        "priority": 14,
        "when": [
          "$gt0005|Birthdate|!=null"
        ],
        "then": [
          "$gt0007|Age|.magnitude=$currentDateTime.year-$gt0005.year",
          "$gt0007|Age|.unit='a'"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 13,
        "when": [
          "$gt0007|Age|.magnitude>=80",
          "$gt0007|Age|!=null"
        ],
        "then": [
          "$gt0016|Age ≥ 80|=1|local::at0015|Yes|"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 12,
        "when": [
          "$gt0007|Age|.magnitude<80",
          "$gt0007|Age|!=null"
        ],
        "then": [
          "$gt0016|Age ≥ 80|=0|local::at0014|No|"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 11,
        "when": [
          "$gt0003|GCS total score|<=4",
          "$gt0003|GCS total score|>=3",
          "$gt0003|GCS total score|!=null"
        ],
        "then": [
          "$gt0015|GCS|=2|local::at0013|3-4|"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 10,
        "when": [
          "$gt0003|GCS total score|>=5",
          "$gt0003|GCS total score|<=12",
          "$gt0003|GCS total score|!=null"
        ],
        "then": [
          "$gt0015|GCS|=1|local::at0012|5-12|"
        ]
      },
      "gt0027": {
        "id": "gt0027",
        "priority": 9,
        "when": [
          "$gt0003|GCS total score|<=15",
          "$gt0003|GCS total score|>=13",
          "$gt0003|GCS total score|!=null"
        ],
        "then": [
          "$gt0015|GCS|=0|local::at0011|13-15|"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 7,
        "when": [
          "$gt0011|ICH Vol ≥ 30ml|!=null",
          "$gt0012|Intraventricular haemorrhage|!=null",
          "$gt0013|Infratentorial origin of haemorrhage|!=null",
          "$gt0015|GCS|!=null",
          "$gt0016|Age ≥ 80|!=null"
        ],
        "then": [
          "$gt0020|Calculate total score|.magnitude=$gt0015.value+$gt0011.value+$gt0013.value+$gt0012.value+$gt0016.value"
        ]
      },
      "gt0038": {
        "id": "gt0038",
        "priority": 6,
        "when": [
          "$gt0020|Total score|==0"
        ],
        "then": [
          "$gt0037|Mortality Rate|=0|local::at0003|0% |"
        ]
      },
      "gt0039": {
        "id": "gt0039",
        "priority": 5,
        "when": [
          "$gt0020|Total score|==1"
        ],
        "then": [
          "$gt0037|Mortality Rate|=1|local::at0004|13% |"
        ]
      },
      "gt0040": {
        "id": "gt0040",
        "priority": 4,
        "when": [
          "$gt0020|Total score|==2"
        ],
        "then": [
          "$gt0037|Mortality Rate|=2|local::at0005|26% |"
        ]
      },
      "gt0041": {
        "id": "gt0041",
        "priority": 3,
        "when": [
          "$gt0020|Total score|==3"
        ],
        "then": [
          "$gt0037|Mortality Rate|=3|local::at0006|72% |"
        ]
      },
      "gt0042": {
        "id": "gt0042",
        "priority": 2,
        "when": [
          "$gt0020|Total score|==4"
        ],
        "then": [
          "$gt0037|Mortality Rate|=4|local::at0007|94% |"
        ]
      },
      "gt0043": {
        "id": "gt0043",
        "priority": 1,
        "when": [
          "$gt0020|Total score|>=5"
        ],
        "then": [
          "$gt0037|Mortality Rate|=5|local::at0008|100% |"
        ]
      }
    }
  },
