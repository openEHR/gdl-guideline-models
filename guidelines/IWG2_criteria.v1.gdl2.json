    "rules": {
      "gt0024": {
        "id": "gt0024",
        "priority": 5,
        "when": [
          "$gt0008|Gradual progressive change in memory function for >6 months|!=null",
          "$gt0009|Objective evidence of hippocampal amnestic syndrome|!=null"
