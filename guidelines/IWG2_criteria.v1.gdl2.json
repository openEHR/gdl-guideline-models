        "then": [
          "$gt0003|Part A score|.magnitude=$gt0008.value+$gt0009.value"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 4,
        "when": [
          "$gt0010|CSF: decreased Aβ1-42 and increased P-tau or T-tau|!=null",
          "$gt0011|Amyloid PET: increased tracer retention|!=null",
          "$gt0012|Genetic testing: AD autosomal dominant mutation in PSEN1, PSEN2, or APP genes|!=null"
        ],
        "then": [
          "$gt0004|Part B score|.magnitude=$gt0010.value+$gt0011.value+$gt0012.value"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 3,
        "then": [
          "$gt0005|Exclusion criteria total|.magnitude=$gt0013.value+$gt0014.value+$gt0015.value+$gt0016.value+$gt0017.value+$gt0018.value+$gt0019.value+$gt0020.value+$gt0021.value+$gt0022.value+$gt0023.value"
        ]
      },
      "gt0027": {
        "id": "gt0027",
        "priority": 2,
        "when": [
          "(($gt0003|Part A score|<2)||($gt0004|Part B score|<1))||($gt0005|Exclusion criteria total|>=1)"
        ],
        "then": [
          "$gt0006|Diagnostic Result|=local::at0026|Not typical AD (Diagnosis by IWG 2 Criteria)|"
        ]
      },
      "gt0028": {
        "id": "gt0028",
        "priority": 1,
        "when": [
          "$gt0003|Part A score|==2",
          "$gt0004|Part B score|>=1",
          "$gt0005|Exclusion criteria total|<1"
        ],
        "then": [
          "$gt0006|Diagnostic Result|=local::at0027|Typical AD (Diagnosis by IWG 2 Criteria)|"
        ]
      }
    }
