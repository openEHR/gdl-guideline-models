          }
        }
      }
    },
    "rules" : {
      "gt0010" : {
        "id" : "gt0010",
        "priority" : 3,
        "when" : [
          "$gt0016|Patient's age (months)|!=null",
          "$gt0017|Hematoma size|!=null",
          "$gt0018|Hematoma location|!=null"
        ],
        "then" : [
          "$gt0020|Total score|.magnitude=$gt0016|Patient's age (months)|.value+$gt0017|Hematoma size|.value+$gt0018|Hematoma location|.value"
        ]
      },
      "gt0013" : {
        "id" : "gt0013",
        "priority" : 2,
        "when" : [
          "$gt0020|Total score|<4"
        ],
        "then" : [
          "$gt0009|Risk assessment|=$gt0011.term"
        ]
      },
      "gt0014" : {
        "id" : "gt0014",
        "priority" : 1,
        "when" : [
          "$gt0020|Total score|>=4"
        ],
        "then" : [
          "$gt0009|Risk assessment|=$gt0012.term"
        ]
      }
    }
  },
