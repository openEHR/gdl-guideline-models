    "pre_conditions": [
      "$gt0003|LV end diastolic dimension|!=null",
      "$gt0004|Interventricular septal end diastole|!=null",
      "$gt0005|Posterior wall thickness at end-diastole|!=null",
      "$gt0006|Do you know the Body Surface Area?|!=null"
    ],
    "rules": {
      "gt0020": {
        "id": "gt0020",
        "priority": 7,
        "when": [
          "$gt0013|Weight|.unit=='[lb_av]'",
          "$gt0015|Height/Length|.unit=='[in_i]'",
          "$gt0006|Do you know the Body Surface Area?|==local::at0016|No|",
          "$gt0013|Weight|!=null",
          "$gt0015|Height/Length|!=null"
        ],
        "then": [
          "$gt0017|Body Surface Area|.magnitude=sqrt(($gt0015|Height/Length|.magnitude*$gt0013|Weight|.magnitude)/3131)",
          "$gt0017|Body Surface Area|.precision=2",
          "$gt0017|Body Surface Area|.unit='m2'"
        ]
      },
      "gt0021": {
        "id": "gt0021",
        "priority": 6,
        "when": [
          "$gt0013|Weight|.unit=='kg'",
          "$gt0015|Height/Length|.unit=='cm'",
          "$gt0006|Do you know the Body Surface Area?|==local::at0016|No|",
          "$gt0013|Weight|!=null",
          "$gt0015|Height/Length|!=null"
        ],
        "then": [
          "$gt0017|Body Surface Area|.magnitude=($gt0013|Weight|.magnitude*$gt0015|Height/Length|.magnitude/3600)^0.5",
          "$gt0017|Body Surface Area|.precision=2",
          "$gt0017|Body Surface Area|.unit='m2'"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 5,
        "when": [
          "$gt0003|LV end diastolic dimension|!=null"
        ],
        "then": [
          "$gt0008|LV Mass|.magnitude=0.8*(1.04*(($gt0003|LV end diastolic dimension|.magnitude+$gt0004|Interventricular septal end diastole|.magnitude+$gt0005|Posterior wall thickness at end-diastole|.magnitude)^3-$gt0003|LV end diastolic dimension|.magnitude^3))+0.6",
          "$gt0008|LV Mass|.precision=2",
          "$gt0008|LV Mass|.unit='g'"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 4,
        "when": [
          "$gt0008|LV Mass|!=null"
        ],
        "then": [
          "$gt0009|LVMI|.magnitude=$gt0008|LV Mass|.magnitude/$gt0017|Body Surface Area|.magnitude",
          "$gt0009|LVMI|.precision=2",
          "$gt0009|LVMI|.unit='g/m2'"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 3,
        "when": [
          "$gt0005|Posterior wall thickness at end-diastole|!=null"
        ],
        "then": [
          "$gt0010|RWT|=2*($gt0005|Posterior wall thickness at end-diastole|.magnitude/$gt0003|LV end diastolic dimension|.magnitude)"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 2,
        "when": [
          "$gt0010|RWT|>0.42"
        ],
        "then": [
          "$gt0011|Classification of LV mass increase|=local::at0023|Concentric hypertrophy|"
        ]
      },
      "gt0027": {
        "id": "gt0027",
        "priority": 1,
        "when": [
          "$gt0010|RWT|<=0.42"
        ],
        "then": [
          "$gt0011|Classification of LV mass increase|=local::at0024|Eccentric hypertrophy|"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 8,
        "when": [
          "$gt0006|Do you know the Body Surface Area?|==local::at0015|Yes|",
          "$gt0006|Do you know the Body Surface Area?|!=null"
        ],
        "then": [
          "$gt0017|Body Surface Area|=$gt0017|Body Surface Area|",
          "$gt0017|Body Surface Area|.precision=2"
        ]
      }
    }
  },
