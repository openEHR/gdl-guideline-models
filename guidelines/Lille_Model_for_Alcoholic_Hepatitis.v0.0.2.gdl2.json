    "rules" : {
      "gt0030" : {
        "id" : "gt0030",
        "priority" : 2,
        "when" : [
          "$gt0003|Age|!=null",
          "$gt0006|Albumin result|!=null",
          "$gt0010|Bilirubin result (initial)|!=null",
          "$gt0014|Bilirubin result (day 7)|!=null",
          "$gt0019|Creatinine result|!=null",
          "$gt0024|PT result|!=null",
          "$gt0019|Creatinine result|.magnitude>115"
        ],
        "then" : [
          "$gt0029|R|.magnitude=3.19-(0.101*$gt0003|Age|.magnitude)+(1.47*$gt0006|Albumin result|.magnitude)+(0.0165*($gt0014|Bilirubin result (day 7)|.magnitude-$gt0010|Bilirubin result (initial)|.magnitude))-(0.206*1)-(0.0065*$gt0010|Bilirubin result (initial)|.magnitude)-(0.0096*$gt0024|PT result|.magnitude)",
          "$gt0029|R|.precision=4"
        ]
      },
      "gt0027" : {
        "id" : "gt0027",
        "priority" : 1,
        "when" : [
          "$gt0003|Age|!=null",
          "$gt0006|Albumin result|!=null",
          "$gt0010|Bilirubin result (initial)|!=null",
          "$gt0014|Bilirubin result (day 7)|!=null",
          "$gt0019|Creatinine result|!=null",
          "$gt0024|PT result|!=null",
          "$gt0019|Creatinine result|.magnitude>115"
        ],
        "then" : [
          "$gt0026|Lille model score|.magnitude=exp(0-$gt0029|R|.magnitude)/(1+exp(0-$gt0029|R|.magnitude))",
          "$gt0026|Lille model score|.unit='1'",
          "$gt0026|Lille model score|.precision=3"
        ]
      }
    }
