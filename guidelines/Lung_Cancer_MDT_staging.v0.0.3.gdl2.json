    "rules" : {
      "gt0036" : {
        "id" : "gt0036",
        "priority" : 3,
        "when" : [
          "$gt0024|PET lymph node uptake|==local::at0026|N1|||$gt0024|PET lymph node uptake|==local::at0027|N2|||$gt0024|PET lymph node uptake|==local::at0028|N3|"
        ],
        "then" : [
          "$gt0014|Mediastinal staging required|=true",
          "$gt0015|Recommended staging method|=local::at0046|EBUS-TBNA|"
        ]
      },
      "gt0037" : {
        "id" : "gt0037",
        "priority" : 2,
        "when" : [
          "$gt0026|PET mediastinum status|==false",
          "$gt0027|Tumor size|.magnitude>3||$gt0025|CT lymph node enlargement|==true"
        ],
        "then" : [
          "$gt0014|Mediastinal staging required|=true",
          "$gt0015|Recommended staging method|=local::at0046|EBUS-TBNA|"
        ]
      },
      "gt0038" : {
        "id" : "gt0038",
        "priority" : 1,
        "when" : [
          "$gt0027|Tumor size|<=3",
          "$gt0028|Tumor location|==local::at0035|Peripheral|&&$gt0039|PET tumor|==true",
          "$gt0024|PET lymph node uptake|==local::at0025|N0|",
          "$gt0025|CT lymph node enlargement|==false"
        ],
        "then" : [
          "$gt0014|Mediastinal staging required|=false"
        ]
      }
    }
