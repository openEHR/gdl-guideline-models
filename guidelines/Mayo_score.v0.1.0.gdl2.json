        "model_id": "openEHR-EHR-OBSERVATION.mayo_score.v1",
        "template_id": "openEHR-EHR-OBSERVATION.mayo_score.v1",
        "type": "INPUT",
        "elements": {
          "gt0003": {
            "id": "gt0003",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0009]",
            "data_type": "DV_ORDINAL",
            "allowed_values": [
