      "gt0012": {
        "id": "gt0012",
        "model_id": "openEHR-EHR-OBSERVATION.mminds.v0",
        "template_id": "openEHR-EHR-OBSERVATION.mminds.v0",
        "type": "OUTPUT",
        "elements": {
