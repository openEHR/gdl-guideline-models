    },
    "rules": {
      "gt0014": {
        "id": "gt0014",
        "priority": 1,
        "when": [
          "$gt0003|Pulse|!=null",
          "$gt0004|Diastolic Blood Pressure|!=null",
          "$gt0005|Sweating|!=null",
          "$gt0006|Hallucinations|!=null",
          "$gt0007|Agitation|!=null",
          "$gt0008|Delusions|!=null",
          "$gt0009|Tremor|!=null",
          "$gt0010|Seizures|!=null",
          "$gt0011|Orientation|!=null"
        ],
        "then": [
          "$gt0013|Total score|.magnitude=$gt0003|Pulse|.value+$gt0004|Diastolic Blood Pressure|.value+$gt0005|Sweating|.value+$gt0006|Hallucinations|.value+$gt0007|Agitation|.value+$gt0008|Delusions|.value+$gt0009|Tremor|.value+$gt0010|Seizures|.value+$gt0011|Orientation|.value"
        ]
      }
    }
