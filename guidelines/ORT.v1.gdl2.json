    "rules": {
      "gt0032": {
        "id": "gt0032",
        "priority": 8,
        "when": [
          "$gt0027|Birthdate|!=null"
        ],
        "then": [
          "$gt0035|Age|.magnitude=$currentDateTime.year-$gt0027.year",
          "$gt0035|Age|.unit='a'"
        ]
      },
      "gt0036": {
        "id": "gt0036",
        "priority": 7,
        "when": [
          "$gt0035|Age|.magnitude>=16",
          "$gt0035|Age|.magnitude<=45",
          "$gt0035|Age|!=null"
        ],
        "then": [
          "$gt0061|Age 16-45|=1|local::at0018|Yes|"
        ]
      },
      "gt0037": {
        "id": "gt0037",
        "priority": 6,
        "when": [
          "($gt0035|Age|.magnitude<16)||($gt0035|Age|.magnitude>45)",
          "$gt0035|Age|!=null"
        ],
        "then": [
          "$gt0061|Age 16-45|=0|local::at0017|No|"
        ]
      },
      "gt0102": {
        "id": "gt0102",
        "priority": 5,
        "when": [
          "$gt0028|Gender|==local::at0005|Male|",
          "$gt0074|History of depression|!=null",
          "$gt0075|History of ADD,OCD,Bipolar or Schizophrenia|!=null",
          "$gt0076|History of alcohol abuse|!=null",
          "$gt0078|History of prescription drug use|!=null",
          "$gt0079|Family history alcohol abuse|!=null",
          "$gt0081|Family history prescription drug abuse|!=null",
          "$gt0085|History of illegal drug abuse|!=null",
          "$gt0095|Family history illegal drug abuse|!=null",
          "$gt0061|Age 16-45|!=null"
        ],
        "then": [
          "$gt0070|Calculate score men|.magnitude=$gt0079.value*3+$gt0081.value+$gt0095.value*3+$gt0061.value+$gt0075.value+$gt0074.value+$gt0078.value+$gt0085.value+$gt0076.value"
        ]
      },
      "gt0103": {
        "id": "gt0103",
        "priority": 4,
        "when": [
          "$gt0028|Gender|==local::at0006|Female|",
          "$gt0073|History of preadolescent sexual abuse|!=null",
          "$gt0074|History of depression|!=null",
          "$gt0075|History of ADD,OCD,Bipolar or Schizophrenia|!=null",
          "$gt0076|History of alcohol abuse|!=null",
          "$gt0078|History of prescription drug use|!=null",
          "$gt0079|Family history alcohol abuse|!=null",
          "$gt0081|Family history prescription drug abuse|!=null",
          "$gt0085|History of illegal drug abuse|!=null",
          "$gt0095|Family history illegal drug abuse|!=null",
          "$gt0061|Age 16-45|!=null"
        ],
        "then": [
          "$gt0071|Calculate score women|.magnitude=$gt0079.value+$gt0081.value+$gt0095.value*2+$gt0073.value+$gt0061.value+$gt0075.value+$gt0074.value+$gt0078.value+$gt0085.value+$gt0076.value"
        ]
      },
      "gt0106": {
        "id": "gt0106",
        "priority": 3,
        "when": [
          "($gt0070|Result - male|<=3)||($gt0071|Result - female|<=3)"
        ],
        "then": [
          "$gt0105|Risk interpretation|=0|local::at0003|Low risk|"
        ]
      },
      "gt0107": {
        "id": "gt0107",
        "priority": 2,
        "when": [
          "(($gt0070|Result - male|<=7)&&($gt0070|Result - male|>=4))||(($gt0071|Result - female|<=7)&&($gt0071|Result - female|>=4))"
        ],
        "then": [
          "$gt0105|Risk interpretation|=1|local::at0004|Moderate risk|"
        ]
      },
      "gt0108": {
        "id": "gt0108",
        "priority": 1,
        "when": [
          "($gt0070|Result - male|>=8)||($gt0071|Result - female|>=8)"
        ],
        "then": [
          "$gt0105|Risk interpretation|=2|local::at0005|High risk|"
        ]
      }
    }
  },
