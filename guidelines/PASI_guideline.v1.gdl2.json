    "rules": {
      "gt0030": {
        "id": "gt0030",
        "priority": 9,
        "when": [
          "$gt0003|Head/neck Erythema|!=null",
          "$gt0004|Head/neck Induration/thickness|!=null",
          "$gt0005|Head/neck Desquamation/scaling|!=null"
        ],
        "then": [
          "$gt0020|Lesion severity Head/neck|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value",
          "$gt0020|Lesion severity Head/neck|.unit='1'"
        ]
      },
      "gt0031": {
        "id": "gt0031",
        "priority": 8,
        "when": [
          "$gt0020|Lesion severity Head/neck|!=null",
          "$gt0006|Percentage of head/neck affected|!=null"
        ],
        "then": [
          "$gt0021|PASI Head/Neck|.magnitude=$gt0020.magnitude*$gt0006.value*0.1",
          "$gt0021|PASI Head/Neck|.precision=1",
          "$gt0021|PASI Head/Neck|.unit='1'"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 7,
        "when": [
          "$gt0007|Upper limbs Erythema|!=null",
          "$gt0008|Upper limbs Induration/thickness|!=null",
          "$gt0009|Upper limbs Desquamation/scaling|!=null"
        ],
        "then": [
          "$gt0022|Lesion severity Upper limbs|.magnitude=$gt0007.value+$gt0008.value+$gt0009.value",
          "$gt0022|Lesion severity Upper limbs|.unit='1'"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 6,
        "when": [
          "$gt0022|Lesion severity Upper limbs|!=null",
          "$gt0010|Percentage of upper limbs affected|!=null"
        ],
        "then": [
          "$gt0023|PASI Upper limbs|.magnitude=$gt0022.magnitude*$gt0010.value*0.2",
          "$gt0023|PASI Upper limbs|.precision=1",
          "$gt0023|PASI Upper limbs|.unit='1'"
        ]
      },
      "gt0036": {
        "id": "gt0036",
        "priority": 5,
        "when": [
          "$gt0011|Trunk Erythema|!=null",
          "$gt0012|Trunk Induration/thickness|!=null",
          "$gt0013|Trunk Desquamation/scaling|!=null"
        ],
        "then": [
          "$gt0024|Lesion severity Trunk|.magnitude=$gt0011.value+$gt0012.value+$gt0013.value",
          "$gt0024|Lesion severity Trunk|.unit='1'"
        ]
      },
      "gt0037": {
        "id": "gt0037",
        "priority": 4,
        "when": [
          "$gt0024|Lesion severity Trunk|!=null",
          "$gt0014|Percentage of trunk affected|!=null"
        ],
        "then": [
          "$gt0025|PASI Trunk|.magnitude=$gt0024.magnitude*$gt0014.value*0.3",
          "$gt0025|PASI Trunk|.unit='1'",
          "$gt0025|PASI Trunk|.precision=1"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 3,
        "when": [
          "$gt0015|Lower limbs Erythema|!=null",
          "$gt0016|Lower limbs Induration/thickness|!=null",
          "$gt0017|Lower limbs Desquamation/scaling|!=null"
        ],
        "then": [
          "$gt0026|Lesion severity Lower limb|.magnitude=$gt0015.value+$gt0016.value+$gt0017.value",
          "$gt0026|Lesion severity Lower limb|.unit='1'"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 2,
        "when": [
          "$gt0026|Lesion severity Lower limb|!=null",
          "$gt0018|Percentage of lower limbs affected|!=null"
        ],
        "then": [
          "$gt0027|PASI Lower limb|.magnitude=$gt0026.magnitude*$gt0018.value*0.4",
          "$gt0027|PASI Lower limb|.precision=1",
          "$gt0027|PASI Lower limb|.unit='1'"
        ]
      },
      "gt0038": {
        "id": "gt0038",
        "priority": 1,
        "when": [
          "$gt0021|PASI Head/Neck|!=null",
          "$gt0023|PASI Upper limbs|!=null",
          "$gt0025|PASI Trunk|!=null",
          "$gt0027|PASI Lower limb|!=null"
        ],
        "then": [
          "$gt0028|Total PASI|.magnitude=$gt0021.magnitude+$gt0023.magnitude+$gt0025.magnitude+$gt0027.magnitude",
          "$gt0028|Total PASI|.unit='1'",
          "$gt0028|Total PASI|.precision=1",
          "$gt0029|PASI interpretation|='Higher PASI scores indicate higher severity of psoriasis; scores range from 0 (no disease) to 72 (maximal disease severity)'"
        ]
      }
    }
