      "gt0035": {
        "id": "gt0035",
        "priority": 6,
        "when": [
          "$gt0026|Birthdate|!=null"
        ],
        "then": [
          "$gt0036|Age|.unit='a'",
          "$gt0036|Age|.magnitude=$currentDateTime.year-$gt0026.year"
        ]
      },
      "gt0037": {
        "id": "gt0037",
        "priority": 5,
        "when": [
          "$gt0036|Age|.unit=='a'",
          "$gt0036|Age|.magnitude<70"
        ],
        "then": [
          "$gt0018|Elderly (>= 70 yrs)|=0|local::at0025|No|"
        ]
      },
      "gt0039": {
        "id": "gt0039",
        "priority": 4,
        "when": [
          "$gt0036|Age|.magnitude>=70",
          "$gt0036|Age|.unit=='a'"
        ],
        "then": [
          "$gt0018|Elderly (>= 70 yrs)|=1|local::at0026|Yes|"
        ]
      },
      "gt0046": {
        "id": "gt0046",
        "priority": 3,
        "when": [
          "$gt0003|Active cancer|!=null",
          "$gt0004|Previous VTE|!=null",
          "$gt0005|Reduced mobility|!=null",
          "$gt0006|Known thrombophilic condition|!=null",
          "$gt0007|Recent (<= 1 month trauma +/- surgery)|!=null",
          "$gt0008|Heart +/- respiratory failure|!=null",
          "$gt0009|Acure MI +/- stroke|!=null",
          "$gt0010|Acute infection +/- rheumatological disorder|!=null",
          "$gt0011|Ongoing hormonal treatment|!=null",
          "$gt0018|Elderly (>= 70 yrs)|!=null",
          "$gt0022|Obesity (BMI>= 30)|!=null"
        ],
        "then": [
          "$gt0024|Total Score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value+$gt0018.value+$gt0008.value+$gt0009.value+$gt0010.value+$gt0022.value+$gt0011.value"
        ]
      },
      "gt0050": {
        "id": "gt0050",
        "priority": 2,
        "when": [
          "$gt0024|Total Score|>=4"
        ],
        "then": [
          "$gt0049|Recommendation|=1|local::at0007|Medical prophylaxis recommended|",
          "$gt0048|Risk Level|=1|local::at0005|High risk|"
        ]
      },
      "gt0051": {
        "id": "gt0051",
        "priority": 1,
        "when": [
          "$gt0024|Total Score|<4"
        ],
        "then": [
          "$gt0048|Risk Level|=0|local::at0004|Low risk|",
          "$gt0049|Recommendation|=0|local::at0006|Do not use medical prophylaxis|"
        ]
      }
