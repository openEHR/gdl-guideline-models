    "rules": {
      "gt0018": {
        "id": "gt0018",
        "priority": 10,
        "when": [
          "$gt0005|Birthdate|!=null"
        ],
        "then": [
          "$gt0004|Age|.magnitude=$currentDateTime.year-$gt0005.year",
          "$gt0004|Age|.unit='a'"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 9,
        "when": [
          "$gt0004|Age|>=12,a"
        ],
        "then": [
          "$gt0009|Age < 12|=0|local::at0012|No|"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 8,
        "when": [
          "$gt0004|Age|<12,a"
        ],
        "then": [
          "$gt0009|Age < 12|=1|local::at0013|Yes|"
        ]
      },
      "gt0021": {
        "id": "gt0021",
        "priority": 7,
        "when": [
          "$gt0004|Age|<=50,a"
        ],
        "then": [
          "$gt0010|Age > 50|=0|local::at0014|No|"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 6,
        "when": [
          "$gt0004|Age|>50,a"
        ],
        "then": [
          "$gt0010|Age > 50|=1|local::at0015|Yes|"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 5,
        "when": [
          "$gt0013|Mechanism: blunt trauma or fall|==1|local::at0011|Yes|",
          "$gt0009|Age < 12|==0|local::at0012|No|",
          "$gt0010|Age > 50|==0|local::at0014|No|",
          "$gt0016|Unable to bear weight in ED (4 steps, limping is allowed)|==0|local::at0016|No|"
        ],
        "then": [
          "$gt0012|Result|=1|local::at0019|Mechanism criteria alone has been met|"
        ]
      },
      "gt0026": {
        "id": "gt0026",
        "priority": 4,
        "when": [
          "($gt0009|Age < 12|==1|local::at0013|Yes|)||(($gt0010|Age > 50|==1|local::at0015|Yes|)||($gt0016|Unable to bear weight in ED (4 steps, limping is allowed)|==1|local::at0017|Yes|))",
          "$gt0013|Mechanism: blunt trauma or fall|==1|local::at0011|Yes|"
        ],
        "then": [
          "$gt0012|Result|=2|local::at0020|Mechanism criteria with at least 1 other criteria have been met|"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 3,
        "when": [
          "!fired($gt0024)",
          "!fired($gt0026)"
        ],
        "then": [
          "$gt0012|Result|=0|local::at0018|Mechanism criteria not met|"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 2,
        "when": [
          "($gt0012|Result|==1|local::at0019|Mechanism criteria alone has been met|)||($gt0012|Result|==0|local::at0018|Mechanism criteria not met|)"
        ],
        "then": [
          "$gt0031|Recommendation|=0|local::at0003|The Pittsburgh Knee Rules cannot be applied and the patient does not need a knee x-ray|"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 1,
        "when": [
          "$gt0012|Result|==2|local::at0020|Mechanism criteria with at least 1 other criteria have been met|"
        ],
        "then": [
          "$gt0031|Recommendation|=1|local::at0004|The Pittsburgh Knee Rules can be applied and the patient should get a knee x-ray|"
        ]
      }
    }
  },
