    "details": {
      "en": {
        "id": "en",
        "purpose": "To calculate the Rule of 7s score and assess the risk of Lyme meningitis.",
        "keywords": [
          "lyme meningitis",
          "risk",
          "CSF",
          "cerebrospinal fluid",
          "headache"
        ],
        "use": "Use in pediatric patients in a Lyme endemic area to decide on starting the antibiotics.\n\nThe rule of 7s is calculated based on three parameters: number of days of headache, CSF mononuclear cells and  7th (or other) cranial nerve palsy.\n\nRule of 7s            Risk\n0 points               Low risk for Lyme meningitis\n1â€“3 points           Not low risk for Lyme meningitis",
        "misuse": "Not to be used in other patients than in pediatric patients (2-18 years).",
        "copyright": "Cambio CDS"
      }
    },
    "other_details": {
      "references": "1. Garro AC, Rutman M, Simonsen K, Jaeger JL, Chapin K, Lockhart G. Prospective validation of a clinical prediction model for Lyme meningitis in children. Pediatrics. 2009 May;123(5):e829-34. doi: 10.1542/peds.2008-2048. PMID: 19403476."
    }
  },
  "definition": {
    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "model_id": "openEHR-EHR-OBSERVATION.rule_of_7s.v0",
        "template_id": "openEHR-EHR-OBSERVATION.rule_of_7s.v0",
        "type": "INPUT",
        "elements": {
          "gt0017": {
            "id": "gt0017",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          },
          "gt0018": {
