    "rules": {
      "gt0023": {
        "id": "gt0023",
        "priority": 4,
        "when": [
          "$gt0003|Head and neck (up to 9%)|!=null",
          "$gt0004|Upper extremities (up to 9% each)|!=null",
          "$gt0005|Anterior trunk (up to 18%)|!=null",
          "$gt0006|Back (up to 18%)|!=null",
          "$gt0007|Lower extremities (up to 18% each)|!=null",
          "$gt0008|Genitals (up to 1%)|!=null"
        ],
        "then": [
          "$gt0039|Affected area score|.magnitude=$gt0003.magnitude+$gt0004.magnitude+$gt0005.magnitude+$gt0006.magnitude+$gt0007.magnitude+$gt0008.magnitude",
          "$gt0039|Affected area score|.unit='% body'"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 3,
        "when": [
          "$gt0009|Redness|!=null",
          "$gt0010|Swelling|!=null",
          "$gt0011|Oozing|!=null",
          "$gt0012|Scratch marks|!=null",
          "$gt0013|Dryness|!=null",
          "$gt0014|Skin thickening|!=null"
        ],
        "then": [
          "$gt0040|Intensity score|.magnitude=$gt0009.value+$gt0010.value+$gt0011.value+$gt0012.value+$gt0014.value+$gt0013.value"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 2,
        "when": [
          "$gt0015|Prurit|!=null",
          "$gt0016|Insomnia|!=null"
        ],
        "then": [
          "$gt0041|Subjective symptoms score|.magnitude=$gt0015.value+$gt0016.value"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 1,
        "when": [
          "$gt0039|Affected area score|!=null",
          "$gt0040|Intensity score|!=null",
          "$gt0041|Subjective symptoms score|!=null"
        ],
        "then": [
          "$gt0042|SCORAD|.magnitude=$gt0039.magnitude/5+7*$gt0040/2+$gt0041",
          "$gt0042|SCORAD|.precision=1",
          "$gt0042|SCORAD|.unit='1'",
          "$gt0043|Interpretation|='SCORing Atopic Dermatitis results range between 0 and 103, where the higher the score, the higher the severity of the disease.'"
        ]
      }
    }
