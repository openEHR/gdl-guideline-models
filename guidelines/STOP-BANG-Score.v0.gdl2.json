        ]
      },
      "gt0054": {
        "id": "gt0054",
        "priority": 1,
        "when": [
          "$gt0014|Total Score|>2"
        ],
        "then": [
          "$gt0052|Risk assessment|=local::at0032|High Risk|"
        ]
