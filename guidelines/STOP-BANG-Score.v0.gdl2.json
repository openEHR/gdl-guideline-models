    "rules": {
      "gt0030": {
        "id": "gt0030",
        "priority": 11,
        "when": [
          "(($gt0006|Body mass index|.magnitude<=35)&&($gt0006|Body mass index|.unit=='kg/m2'))||(($gt0006|Body mass index|.magnitude<=119601)&&($gt0006|Body mass index|.unit=='[lb_av]/[in_i]2'))"
        ],
