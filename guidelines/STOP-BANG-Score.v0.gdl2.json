      "gt0062": {
        "id": "gt0062",
        "priority": 7,
        "when": [
          "(($gt0059|Age|.magnitude<=50)&&($gt0059|Age|.unit=='a'))||((($gt0059|Age|.magnitude<=600)&&($gt0059|Age|.unit=='mo'))||((($gt0059|Age|.magnitude<=2607)&&($gt0059|Age|.unit=='wk'))||(($gt0059|Age|.magnitude<=18250)&&($gt0059|Age|.unit=='d'))))"
        ],
        "then": [
          "$gt0056|Age|=0|local::at0047|<=50|"
        ]
      },
      "gt0063": {
        "id": "gt0063",
        "priority": 6,
        "when": [
          "(($gt0059|Age|.magnitude>50)&&($gt0059|Age|.unit=='a'))||((($gt0059|Age|.magnitude>600)&&($gt0059|Age|.unit=='mo'))||((($gt0059|Age|.magnitude>2607)&&($gt0059|Age|.unit=='wk'))||(($gt0059|Age|.magnitude>18250)&&($gt0059|Age|.unit=='d'))))"
        ],
        "then": [
          "$gt0056|Age|=1|local::at0048|>50|"
        ]
      },
      "gt0028": {
        "id": "gt0028",
        "priority": 5,
        "when": [
          "(($gt0007|Neck Circumference|.magnitude<=40)&&($gt0007|Neck Circumference|.unit=='cm'))||((($gt0007|Neck Circumference|.magnitude<=15.748)&&($gt0007|Neck Circumference|.unit=='[in_i]'))||(($gt0007|Neck Circumference|.magnitude<=400)&&($gt0007|Neck Circumference|.unit=='mm')))"
        ],
        "then": [
          "$gt0018|Neck circunference|=0|local::at0043|≤40 cm|"
        ]
      },
      "gt0041": {
        "id": "gt0041",
        "priority": 4,
        "when": [
          "(($gt0007|Neck Circumference|.magnitude>40)&&($gt0007|Neck Circumference|.unit=='cm'))||((($gt0007|Neck Circumference|.magnitude>15.748)&&($gt0007|Neck Circumference|.unit=='[in_i]'))||(($gt0007|Neck Circumference|.magnitude>400)&&($gt0007|Neck Circumference|.unit=='mm')))"
        ],
        "then": [
          "$gt0018|Neck circunference|=1|local::at0044|>40 cm|"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 3,
        "when": [
          "$gt0006|Body mass index|!=null",
          "$gt0007|Neck Circumference|!=null",
          "$gt0010|Do you snore loudly?|!=null",
          "$gt0011|Do you often feel tired, fatigued, or sleepy during the daytime?|!=null",
          "$gt0036|Has anyone observed you stop breathing during sleep?|!=null",
          "$gt0043|Do you have (or are you being treated for) high blood pressure?|!=null"
        ],
        "then": [
          "$gt0014|Total Score|.magnitude=$gt0010.value+$gt0011.value+$gt0017.value+$gt0018.value+$gt0036.value+$gt0043.value+$gt0056.value+$gt0055.value"
        ]
      },
      "gt0053": {
        "id": "gt0053",
        "priority": 2,
        "when": [
          "$gt0014|Total Score|<=2"
        ],
        "then": [
