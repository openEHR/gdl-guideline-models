        "type": "INPUT",
        "elements": {
          "gt0017": {
            "id": "gt0017",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]",
            "data_type": "DV_ORDINAL",
            "allowed_values": [
              "0|local::at0012|Rapid|",
              "2|local::at0013|Slow|",
              "4|local::at0014|Very slow|"
            ]
          },
          "gt0018": {
            "id": "gt0018",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0005]",
            "data_type": "DV_ORDINAL",
            "allowed_values": [
              "0|local::at0015|Normal|",
              "2|local::at0016|Sunken|"
            ]
          },
          "gt0019": {
            "id": "gt0019",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0006]",
            "data_type": "DV_ORDINAL",
            "allowed_values": [
              "0|local::at0017|Normal|",
              "2|local::at0018|Deep|"
            ]
          },
          "gt0020": {
            "id": "gt0020",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0007]",
            "data_type": "DV_ORDINAL",
            "allowed_values": [
              "0|local::at0019|Normal|",
              "1|local::at0020|Decreased or dark|",
              "2|local::at0021|Minimal or none|"
            ]
          },
          "gt0021": {
            "id": "gt0021",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0008]",
            "data_type": "DV_ORDINAL",
            "allowed_values": [
              "0|local::at0022|Strong|",
              "1|local::at0023|Decreased|",
              "4|local::at0024|Absent|"
            ]
          }
        }
      },
      "gt0022": {
        "id": "gt0022",
        "model_id": "openEHR-EHR-OBSERVATION.basic_demographic.v1",
        "template_id": "openEHR-EHR-OBSERVATION.basic_demographic.v1",
        "type": "INPUT",
        "elements": {
          "gt0023": {
            "id": "gt0023",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0013]",
            "data_type": "DV_QUANTITY",
            "units": [
              "a"
            ]
          }
        }
      },
      "gt0024": {
        "id": "gt0024",
        "model_id": "openEHR-EHR-OBSERVATION.simplified_nirudak.v0",
        "template_id": "openEHR-EHR-OBSERVATION.simplified_nirudak.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0025": {
            "id": "gt0025",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0009]",
            "data_type": "DV_COUNT"
          }
        }
      },
      "gt0026": {
        "id": "gt0026",
        "model_id": "openEHR-EHR-EVALUATION.simplified_nirudak_score_assessment.v0",
        "template_id": "openEHR-EHR-EVALUATION.simplified_nirudak_score_assessment.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0027": {
            "id": "gt0027",
            "path": "/data[at0001]/items[at0002]",
            "data_type": "DV_CODED_TEXT",
            "allowed_values": [
              "local::at0003|No dehydration|",
              "local::at0004|Some dehydration|",
              "local::at0005|Severe dehydration|"
            ]
          }
        }
      }
    },
    "pre_conditions": [
      "$gt0023|Age|>=5,a"
    ],
    "rules": {
      "gt0028": {
        "id": "gt0028",
        "priority": 4,
        "when": [
          "$gt0017|Skin pinch|!=null",
          "$gt0018|Eye level|!=null",
          "$gt0019|Respiration depth|!=null",
          "$gt0020|Urine output|!=null",
          "$gt0021|Radial pulse|!=null"
        ],
        "then": [
          "$gt0025|Total score|=$gt0017|Skin pinch|.value+$gt0018|Eye level|.value+$gt0019|Respiration depth|.value+$gt0020|Urine output|.value+$gt0021|Radial pulse|.value"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 3,
        "when": [
          "$gt0025|Total score|>=6"
        ],
        "then": [
          "$gt0027|Interpretation|=local::at0005|Severe dehydration|"
        ]
      },
      "gt0030": {
        "id": "gt0030",
        "priority": 2,
        "when": [
          "$gt0025|Total score|>=4",
          "$gt0025|Total score|<7"
        ],
        "then": [
          "$gt0027|Interpretation|=local::at0004|Some dehydration|"
        ]
      },
      "gt0031": {
        "id": "gt0031",
        "priority": 1,
        "when": [
          "$gt0025|Total score|<4"
        ],
        "then": [
          "$gt0027|Interpretation|=local::at0003|No dehydration|"
        ]
      }
    }
  },
