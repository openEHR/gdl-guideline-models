    "rules": {
      "gt0022": {
        "id": "gt0022",
        "priority": 14,
        "when": [
          "$gt0004|Birthdate|!=null"
        ],
        "then": [
          "$gt0005|Age|.unit='a'",
          "$gt0005|Age|.magnitude=$currentDateTime.year-$gt0004.year"
        ]
      },
      "gt0023": {
        "id": "gt0023",
        "priority": 13,
        "when": [
          "$gt0005|Age|>80,a"
        ],
        "then": [
          "$gt0016|Age > 80 years|=1|local::at0021|Yes|"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 12,
        "when": [
          "$gt0005|Age|<=80,a"
        ],
        "then": [
          "$gt0016|Age > 80 years|=0|local::at0020|No|"
        ]
      },
      "gt0025": {
        "id": "gt0025",
        "priority": 11,
        "when": [
          "$gt0013|History of cancer|!=null"
        ],
        "then": [
          "$gt0017|History of cancer|=$gt0013|History of cancer|"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 10,
        "when": [
          "$gt0014|History of chronic cardiopulmonary disease|!=null"
        ],
        "then": [
          "$gt0018|History of chronic cardiopulmonary disease|=$gt0014|History of chronic cardiopulmonary disease|"
        ]
      },
      "gt0030": {
        "id": "gt0030",
        "priority": 9,
        "when": [
          "$gt0038|Rate|>=110,/min"
        ],
        "then": [
          "$gt0019|Heart rate ≥ 110|=1|local::at0015|Yes|"
        ]
      },
      "gt0031": {
        "id": "gt0031",
        "priority": 8,
        "when": [
          "$gt0038|Rate|<110,/min"
        ],
        "then": [
          "$gt0019|Heart rate ≥ 110|=0|local::at0014|No|"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 7,
        "when": [
          "$gt0009|Systolic|<100,mm[Hg]"
        ],
        "then": [
          "$gt0020|Systolic BP < 100 mm Hg|=1|local::at0013|Yes|"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 6,
        "when": [
          "$gt0009|Systolic|>=100,mm[Hg]"
        ],
        "then": [
          "$gt0020|Systolic BP < 100 mm Hg|=0|local::at0012|No|"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 5,
        "when": [
          "$gt0011|SaO2|<90,%"
        ],
        "then": [
          "$gt0021|O2 saturation < 90%|=1|local::at0011|Yes|"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 4,
        "when": [
          "$gt0011|SaO2|>=90,%"
        ],
        "then": [
          "$gt0021|O2 saturation < 90%|=0|local::at0010|No|"
        ]
      },
      "gt0036": {
        "id": "gt0036",
        "priority": 3,
        "then": [
          "$gt0028|Total score|.magnitude=(((($gt0021.value+$gt0020.value)+$gt0018.value)+$gt0019.value)+$gt0016.value)+$gt0017.value"
        ]
      },
      "gt0043": {
        "id": "gt0043",
        "priority": 2,
        "when": [
          "$gt0028|Total score|==0"
        ],
        "then": [
          "$gt0040|Percentage Mortality Risk|=0|local::at0004|Low risk of mortality (1.1%)|",
          "$gt0041|Percentage Severe Morbidity|=0|local::at0007|Severe morbidity (1.5%)|",
          "$gt0042|Management|=0|local::at0009|Consider outpatient management of PE|"
        ]
      },
      "gt0044": {
        "id": "gt0044",
        "priority": 1,
        "when": [
          "$gt0028|Total score|>=1"
        ],
        "then": [
          "$gt0040|Percentage Mortality Risk|=1|local::at0005|High risk of mortality (8.9%)|",
          "$gt0041|Percentage Severe Morbidity|=1|local::at0008|Severe morbidity (2.7%)|",
          "$gt0042|Management|=1|local::at0010|Consider inpatient management of PE|"
        ]
      }
