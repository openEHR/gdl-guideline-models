      "gt0041": {
        "id": "gt0041",
        "priority": 3,
        "when": [
          "$gt0004|Maintains starting position|==2|local::at0006|Yes|",
          "$gt0018|Rotates upper trunk repitition 1|!=null",
          "($gt0017|Rotates upper trunk|==1|local::at0037|Assymetrical rotation|)||($gt0017|Rotates upper trunk|==2|local::at0038|Symmetrical rotation|)"
        ],
        "then": [
          "$gt0023|Coordination Score|.magnitude=$gt0023+$gt0018.value"
        ]
      },
      "gt0042": {
        "id": "gt0042",
        "priority": 2,
        "when": [
          "$gt0004|Maintains starting position|==2|local::at0006|Yes|",
          "$gt0020|Rotates lower trunk repitition 1|!=null",
          "($gt0019|Rotates lower trunk|==1|local::at0037|Assymetrical rotation|)||($gt0019|Rotates lower trunk|==2|local::at0038|Symmetrical rotation|)"
        ],
        "then": [
          "$gt0023|Coordination Score|.magnitude=$gt0023+$gt0020.value"
        ]
      },
      "gt0043": {
        "id": "gt0043",
        "priority": 1,
        "when": [
          "$gt0004|Maintains starting position|==2|local::at0006|Yes|",
          "$gt0021|Static Balance Score|!=null",
          "$gt0022|Dynamic Balance Score|!=null",
          "$gt0023|Coordination Score|!=null"
        ],
        "then": [
          "$gt0024|Total Score|.magnitude=$gt0021+$gt0022+$gt0023"
        ]
      }
