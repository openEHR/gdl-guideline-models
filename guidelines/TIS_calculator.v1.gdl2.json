        "priority": 8,
        "when": [
          "$gt0004|Maintains starting position|==2|local::at0006|Yes|",
          "$gt0010|Shortens unaffected side|==1|local::at0018|Moves actively without help, elbow touches bed or table|",
          "$gt0011|Shortens unaffected side repitition 1|!=null"
        ],
        "then": [
          "$gt0022|Dynamic Balance Score|.magnitude=$gt0022+$gt0011.value"
        ]
      },
      "gt0038": {
        "id": "gt0038",
        "priority": 7,
        "when": [
          "$gt0004|Maintains starting position|==2|local::at0006|Yes|",
          "$gt0010|Shortens unaffected side|==1|local::at0018|Moves actively without help, elbow touches bed or table|",
          "$gt0011|Shortens unaffected side repitition 1|==1|local::at0021|Appropriate shortening/lengthening|",
          "$gt0012|Shorten unaffected side repitition 2|!=null"
        ],
        "then": [
          "$gt0022|Dynamic Balance Score|.magnitude=$gt0022+$gt0012.value"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 6,
        "when": [
          "$gt0004|Maintains starting position|==2|local::at0006|Yes|",
          "$gt0015|Lifts pelvis unaffected side|==1|local::at0021|Appropriate shortening/lengthening|",
          "$gt0016|Lifts pelvis unaffected side repitition 1|!=null"
        ],
        "then": [
          "$gt0022|Dynamic Balance Score|.magnitude=$gt0022+$gt0016.value"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 5,
        "when": [
          "$gt0004|Maintains starting position|==2|local::at0006|Yes|",
          "$gt0013|Lifts pelvis hemiplegic side|==1|local::at0021|Appropriate shortening/lengthening|",
