    "pre_conditions" : [
      "$gt0003|Primary Tumor|!=null",
      "$gt0004|Lymph Nodes|!=null",
      "$gt0005|Distant Metastasis|!=null"
    ],
    "rules" : {
      "gt0010" : {
        "id" : "gt0010",
        "priority" : 26,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0007|No evidence of primary tumor|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0005|T0|"
        ]
      },
      "gt0011" : {
        "id" : "gt0011",
        "priority" : 25,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0008|Primary tumor cannot be assessed|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0006|Tx|"
        ]
      },
      "gt0012" : {
        "id" : "gt0012",
        "priority" : 24,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0009|Carcinoma in situ: Intraepithelial or invasion into the lamina propria|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0007|Tis|"
        ]
      },
      "gt0013" : {
        "id" : "gt0013",
        "priority" : 23,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0010|The tumor invades the submucosa|||$gt0003|Primary Tumor|==local::at0011|Sm1: Invasion of 1/3 of the submucosa|||$gt0003|Primary Tumor|==local::at0012|Sm2: Invasion of 2/3 of the submucosa|||$gt0003|Primary Tumor|==local::at0013|Sm3: Invasion of 3/3 of the submucosa|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0008|T1|"
        ]
      },
      "gt0015" : {
        "id" : "gt0015",
        "priority" : 22,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0038|The tumor invades the muscularis propria|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0009|T2|"
        ]
      },
      "gt0014" : {
        "id" : "gt0014",
        "priority" : 21,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0014|The tumor invades through the muscularis propria into the pericolonic tissue|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0010|T3|"
        ]
      },
      "gt0016" : {
        "id" : "gt0016",
        "priority" : 20,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0015|Minimal invasion: < 1 mm outside the boundaries of the muscularis propria|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0011|T3a|"
        ]
      },
      "gt0017" : {
        "id" : "gt0017",
        "priority" : 19,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0016|Slight invasion: 1–5 mm invasion outside the boundaries of the muscularis propria|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0012|T3b|"
        ]
      },
      "gt0018" : {
        "id" : "gt0018",
        "priority" : 18,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0017|Moderate invasion: > 5–15 mm outside the boundaries of the muscularis propria|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0013|T3c|"
        ]
      },
      "gt0019" : {
        "id" : "gt0019",
        "priority" : 17,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0018|Extensive invasion: > 15 mm outside the boundaries of the  propria|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0014|T3d|"
        ]
      },
      "gt0020" : {
        "id" : "gt0020",
        "priority" : 16,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0019|The tumor penetrates the surface of the visceral peritoneum|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0015|T4a|"
        ]
      },
      "gt0021" : {
        "id" : "gt0021",
        "priority" : 15,
        "when" : [
          "$gt0003|Primary Tumor|==local::at0020|The tumor invades other organs or structures|"
        ],
        "then" : [
          "$gt0007|T stage|=local::at0016|T4b|"
        ]
      },
      "gt0022" : {
        "id" : "gt0022",
        "priority" : 14,
        "when" : [
          "$gt0004|Lymph Nodes|==local::at0022|No positive regional lymph nodes|"
        ],
        "then" : [
          "$gt0008|N stage|=local::at0020|N0|"
        ]
      },
      "gt0023" : {
        "id" : "gt0023",
        "priority" : 13,
        "when" : [
          "$gt0004|Lymph Nodes|==local::at0023|Regional lymph nodes were not assessed|"
        ],
        "then" : [
          "$gt0008|N stage|=local::at0021|Nx|"
        ]
      },
      "gt0024" : {
        "id" : "gt0024",
        "priority" : 12,
        "when" : [
          "$gt0004|Lymph Nodes|==local::at0031|Metastases in 1–3 regional lymph nodes|"
        ],
        "then" : [
          "$gt0008|N stage|=local::at0022|N1|"
        ]
      },
      "gt0025" : {
        "id" : "gt0025",
        "priority" : 11,
        "when" : [
          "$gt0004|Lymph Nodes|==local::at0032|Metastases in 1 regional lymph node|"
        ],
        "then" : [
          "$gt0008|N stage|=local::at0029|N1a|"
        ]
      },
      "gt0026" : {
        "id" : "gt0026",
        "priority" : 10,
        "when" : [
          "$gt0004|Lymph Nodes|==local::at0033|Metastases in 2–3 regional lymph nodes|"
        ],
        "then" : [
          "$gt0008|N stage|=local::at0030|N1b|"
        ]
      },
      "gt0027" : {
        "id" : "gt0027",
        "priority" : 9,
        "when" : [
          "$gt0004|Lymph Nodes|==local::at0034|Tumor deposits in the subserosa, mesentery, or non-peritonealized pericolic or perirectal tissue without regional lymph node metastasis|"
        ],
        "then" : [
          "$gt0008|N stage|=local::at0031|N1c|"
        ]
      },
      "gt0028" : {
        "id" : "gt0028",
        "priority" : 8,
        "when" : [
          "$gt0004|Lymph Nodes|==local::at0035|Metastases in 4 or more regional lymph nodes|"
        ],
        "then" : [
          "$gt0008|N stage|=local::at0032|N2|"
        ]
      },
      "gt0029" : {
        "id" : "gt0029",
        "priority" : 7,
        "when" : [
          "$gt0004|Lymph Nodes|==local::at0036|Metastases in 4–6 regional lymph nodes|"
        ],
        "then" : [
          "$gt0008|N stage|=local::at0033|N2a|"
        ]
      },
      "gt0030" : {
        "id" : "gt0030",
        "priority" : 6,
        "when" : [
          "$gt0004|Lymph Nodes|==local::at0037|Metastases in 7 or more regional lymph nodes|"
        ],
        "then" : [
          "$gt0008|N stage|=local::at0034|N2b|"
        ]
      },
      "gt0031" : {
        "id" : "gt0031",
        "priority" : 5,
        "when" : [
          "$gt0005|Distant Metastasis|==local::at0026|No distant metastasis|"
        ],
        "then" : [
          "$gt0009|M stage|=local::at0024|M0|"
        ]
      },
      "gt0032" : {
        "id" : "gt0032",
        "priority" : 4,
        "when" : [
          "$gt0005|Distant Metastasis|==local::at0027|Distant metastasis|"
        ],
        "then" : [
          "$gt0009|M stage|=local::at0025|M1|"
        ]
      },
      "gt0033" : {
        "id" : "gt0033",
        "priority" : 3,
        "when" : [
          "$gt0005|Distant Metastasis|==local::at0028|Metastasis to one organ or site but without peritoneal metastasis|"
        ],
        "then" : [
          "$gt0009|M stage|=local::at0026|M1a|"
        ]
      },
      "gt0034" : {
        "id" : "gt0034",
        "priority" : 2,
        "when" : [
          "$gt0005|Distant Metastasis|==local::at0029|Metastasis to more than one organ/site|"
        ],
        "then" : [
          "$gt0009|M stage|=local::at0027|M1b|"
        ]
      },
      "gt0035" : {
        "id" : "gt0035",
        "priority" : 1,
        "when" : [
          "$gt0005|Distant Metastasis|==local::at0030|Metastasis to the peritoneum with or without other metastasis|"
        ],
        "then" : [
          "$gt0009|M stage|=local::at0028|M1c|"
        ]
      }
    }
  },
