        "model_id" : "openEHR-EHR-EVALUATION.tnm_colorectal_cancer_assessment.v0",
        "template_id" : "openEHR-EHR-EVALUATION.tnm_colorectal_cancer_assessment.v0",
        "type" : "OUTPUT",
        "elements" : {
          "gt0007" : {
            "id" : "gt0007",
            "path" : "/data[at0003]/items[at0004]",
            "data_type" : "DV_CODED_TEXT"
          },
          "gt0008" : {
            "id" : "gt0008",
            "path" : "/data[at0003]/items[at0019]",
            "data_type" : "DV_CODED_TEXT"
          },
          "gt0009" : {
