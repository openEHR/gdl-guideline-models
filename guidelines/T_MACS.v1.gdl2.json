    "rules": {
      "gt0043": {
        "id": "gt0043",
        "priority": 6,
        "when": [
          "$gt0030|Worsening or crescendo angina|!=null",
          "$gt0040|Pain radiating to right arm or shoulder|!=null",
          "$gt0032|Pain associated with vomiting|!=null",
          "$gt0033|Sweating observed|!=null",
          "$gt0029|EKG ischemia|!=null",
          "$gt0042|Hypotension|!=null",
          "$gt0041|hs-cTnT concentration on arrival|.unit=='nanogm/l'"
        ],
        "then": [
          "$gt0038|Probability of ACS|.magnitude=100/(1+e^(4.766-1.713*$gt0029.value-0.847*$gt0030.value-0.607*$gt0040.value-1.417*$gt0032.value-2.058*$gt0033.value-1.208*$gt0042.value-0.089*$gt0041.magnitude))",
          "$gt0038|Probability of ACS|.unit='%'",
          "$gt0038|Probability of ACS|.precision=0"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 5,
        "when": [
          "$gt0030|Worsening or crescendo angina|!=null",
          "$gt0040|Pain radiating to right arm or shoulder|!=null",
          "$gt0032|Pain associated with vomiting|!=null",
          "$gt0033|Sweating observed|!=null",
          "$gt0029|EKG ischemia|!=null",
          "$gt0042|Hypotension|!=null",
          "$gt0041|hs-cTnT concentration on arrival|.unit=='ug/l'"
        ],
        "then": [
          "$gt0038|Probability of ACS|.magnitude=100/(1+e^(4.766-1.713*$gt0029.value-0.847*$gt0030.value-0.607*$gt0040.value-1.417*$gt0032.value-2.058*$gt0033.value-1.208*$gt0042.value-0.089*$gt0041.magnitude*1000))",
          "$gt0038|Probability of ACS|.unit='%'",
          "$gt0038|Probability of ACS|.precision=0"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 4,
        "when": [
          "$gt0038|Probability of ACS|>=95,%"
        ],
        "then": [
          "$gt0034|Risk|=local::at0024|High|",
          "$gt0035|Interpretation|=local::at0029|ACS ruled in. Refer to cardiology, treat for ACS.|"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 3,
        "when": [
          "$gt0038|Probability of ACS|>=5,%",
          "$gt0038|Probability of ACS|<95,%"
        ],
        "then": [
          "$gt0034|Risk|=local::at0023|Moderate|",
          "$gt0035|Interpretation|=local::at0028|Serial troponin in general ward and consider stress testing and/or CT coronary angiography thereafter.|"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 2,
        "when": [
          "$gt0038|Probability of ACS|>=2,%",
          "$gt0038|Probability of ACS|<5,%"
        ],
        "then": [
          "$gt0034|Risk|=local::at0022|Low|",
          "$gt0035|Interpretation|=local::at0027|Consider serial troponin in ED ward, e.g. 3h troponin; consider discharge if normal.|"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 1,
        "when": [
          "$gt0038|Probability of ACS|<2,%"
        ],
        "then": [
          "$gt0034|Risk|=local::at0021|Very low|",
          "$gt0035|Interpretation|=local::at0026|ACS ruled out. Consider discharge.|"
        ]
      }
    }
  },
