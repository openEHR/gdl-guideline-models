    "rules": {
      "gt0027": {
        "id": "gt0027",
        "priority": 4,
        "when": [
          "$gt0003|1 - Sitting balance| != null",
          "$gt0004|2 - Rises from chair| != null",
          "$gt0005|3 - Attempts to rise| != null",
          "$gt0006|4 - Immediate standing balance| != null",
          "$gt0007|5 - Standing balance| != null",
          "$gt0008|6 - Nudged| != null",
          "$gt0009|7 - Eyes closed| != null",
          "$gt0010|8A - Turning 360 degrees (steps)| != null",
          "$gt0011|8B - Turning 360 degrees (steadiness)| != null",
          "$gt0012|9 - Sitting down| != null",
          "$gt0013|10 - Indication of gait| != null",
          "$gt0014|11A - Step length and height (Right)| != null",
          "$gt0015|11B - Step length and height (Left)| != null",
          "$gt0016|12A - Foot clearance (Right)| != null",
          "$gt0017|12B - Foot clearance (Left)| != null",
          "$gt0018|13 - Step symmetry| != null",
          "$gt0019|14 - Step continuity| != null",
          "$gt0020|15 - Path| != null",
          "$gt0021|16 - Trunk| != null",
          "$gt0022|17 - Walking time| != null"
        ],
        "then": [
          "$gt0024|Total score| = $gt0003|1 - Sitting balance|.value + $gt0004|2 - Rises from chair|.value + $gt0005|3 - Attempts to rise|.value + $gt0006|4 - Immediate standing balance|.value + $gt0007|5 - Standing balance|.value + $gt0008|6 - Nudged|.value + $gt0009|7 - Eyes closed|.value + $gt0010|8A - Turning 360 degrees (steps)|.value + $gt0011|8B - Turning 360 degrees (steadiness)|.value + $gt0012|9 - Sitting down|.value + $gt0013|10 - Indication of gait|.value + $gt0014|11A - Step length and height (Right)|.value + $gt0015|11B - Step length and height (Left)|.value + $gt0016|12A - Foot clearance (Right)|.value + $gt0017|12B - Foot clearance (Left)|.value + $gt0018|13 - Step symmetry|.value + $gt0019|14 - Step continuity|.value + $gt0020|15 - Path|.value + $gt0021|16 - Trunk|.value + $gt0022|17 - Walking time|.value"
        ]
      },
      "gt0028": {
        "id": "gt0028",
        "priority": 3,
        "when": [
          "$gt0024|Total score| < 19"
        ],
        "then": [
          "$gt0026|Fall risk interpretation| = local::at0003|Low fall risk|"
        ]
      },
      "gt0029": {
        "id": "gt0029",
        "priority": 2,
        "when": [
          "$gt0024|Total score| >= 19",
          "$gt0024|Total score| <= 23"
        ],
        "then": [
          "$gt0026|Fall risk interpretation| = local::at0004|Moderate fall risk|"
        ]
      },
      "gt0030": {
        "id": "gt0030",
        "priority": 1,
        "when": [
          "$gt0024|Total score| >= 24"
        ],
        "then": [
          "$gt0026|Fall risk interpretation| = local::at0005|High fall risk|"
        ]
      }
    }
