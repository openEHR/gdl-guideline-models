    "default_actions": [
      "$gt0026|Diagnosis of acute cholangitis|='Criteria not met'"
    ],
    "rules": {
      "gt0030": {
        "id": "gt0030",
        "priority": 10,
        "when": [
          "$gt0003|Fever and/or shaking chills|!=null",
          "$gt0004|Laboratory data: evidence of inflammatory response|!=null"
        ],
        "then": [
          "$gt0021|Part A score|.magnitude=$gt0003.value+$gt0004.value"
        ]
      },
      "gt0031": {
        "id": "gt0031",
        "priority": 9,
        "when": [
          "$gt0005|Jaundice|!=null",
          "$gt0006|Laboratory data: abnormal liver enzymes|!=null"
        ],
        "then": [
          "$gt0022|Part B score|.magnitude=$gt0005.value+$gt0006.value"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 8,
        "when": [
          "$gt0007|Biliary dilatation|!=null",
          "$gt0008|Evidence of the etiology on imaging|!=null"
        ],
        "then": [
          "$gt0023|Part C score|.magnitude=$gt0007.value+$gt0008.value"
        ]
      },
      "gt0035": {
        "id": "gt0035",
        "priority": 7,
        "when": [
          "$gt0021|Part A score|>=1",
          "($gt0022|Part B score|>=1)||($gt0023|Part C score|>=1)"
        ],
        "then": [
          "$gt0026|Diagnosis of acute cholangitis|='Suspected diagnosis '"
        ]
      },
      "gt0036": {
        "id": "gt0036",
        "priority": 6,
        "when": [
          "$gt0021|Part A score|>=1",
          "$gt0022|Part B score|>=1",
          "$gt0023|Part C score|>=1"
        ],
        "then": [
          "$gt0026|Diagnosis of acute cholangitis|='Definite diagnosis'"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 5,
        "when": [
          "$gt0009|Cardiovascular dysfunction|!=null",
          "$gt0010|Neurological dysfunction|!=null",
          "$gt0011|Respiratory dysfunction|!=null",
          "$gt0012|Renal dysfunction|!=null",
          "$gt0013|Hepatic dysfunction|!=null",
          "$gt0014|Hematological dysfunction|!=null",
          "(fired($gt0035))||(fired($gt0036))"
        ],
        "then": [
          "$gt0024|Grade III score|.magnitude=$gt0009.value+$gt0010.value+$gt0011.value+$gt0012.value+$gt0013.value+$gt0014.value"
        ]
      },
      "gt0034": {
        "id": "gt0034",
        "priority": 4,
        "when": [
          "$gt0015|Abnormal WBC count|!=null",
          "$gt0016|High fever|!=null",
          "$gt0017|Age ≥75 years|!=null",
          "$gt0018|Hyperbilirubinemia|!=null",
          "$gt0019|Hypoalbuminemia|!=null",
          "(fired($gt0035))||(fired($gt0036))"
        ],
        "then": [
          "$gt0025|Grade II score|.magnitude=$gt0015.value+$gt0016.value+$gt0017.value+$gt0018.value+$gt0019.value"
        ]
      },
      "gt0039": {
        "id": "gt0039",
        "priority": 3,
        "when": [
          "(fired($gt0035))||(fired($gt0036))",
          "$gt0024|Grade III score|>=1"
        ],
        "then": [
          "$gt0027|Severity grading|=local::at0075|Grade III|",
          "$gt0028|Acute cholangitis severity|=local::at0071|Severe|",
          "$gt0029|Recommendations|='initial treatment with antibiotics, urgent biliary drainage, appropriate respiratory/circulatory management'"
        ]
      },
      "gt0040": {
        "id": "gt0040",
        "priority": 2,
        "when": [
          "(fired($gt0035))||(fired($gt0036))",
          "!fired($gt0039)",
          "$gt0025|Grade II score|>=2"
        ],
        "then": [
          "$gt0027|Severity grading|=local::at0074|Grade II|",
          "$gt0028|Acute cholangitis severity|=local::at0070|Moderate|",
          "$gt0029|Recommendations|='antibiotics and general supportive care; early endoscopic or percutaneous transhepatic biliary drainage is indicated'"
        ]
      },
      "gt0041": {
        "id": "gt0041",
        "priority": 1,
        "when": [
          "(fired($gt0035))||(fired($gt0036))",
          "!fired($gt0039)",
          "!fired($gt0040)"
        ],
        "then": [
          "$gt0027|Severity grading|=local::at0073|Grade I|",
          "$gt0028|Acute cholangitis severity|=local::at0069|Mild|",
          "$gt0029|Recommendations|='antibiotics and general supportive care; consider biliary drainage if no response to initial treatment'"
        ]
      }
    }
