    "rules": {
      "gt0059": {
        "id": "gt0059",
        "priority": 10,
        "when": [
          "$gt0043|Murphy's sign|!=null",
          "$gt0044|Right upper abdominal quadrant mass, pain, or tenderness|!=null"
        ],
        "then": [
          "$gt0040|Score A|=$gt0043.value+$gt0044.value"
        ]
      },
      "gt0060": {
        "id": "gt0060",
        "priority": 9,
        "when": [
          "$gt0045|Fever|!=null",
          "$gt0046|Elevated CRP|!=null",
          "$gt0047|Elevated WBC count|!=null"
        ],
        "then": [
          "$gt0041|Score B|=$gt0045.value+$gt0046.value+$gt0047.value"
        ]
      },
      "gt0061": {
        "id": "gt0061",
        "priority": 8,
        "when": [
          "$gt0040|Score A|>=1",
          "($gt0041|Score B|>=1)||($gt0048|Imaging findings characteristic of acute cholecystitis|==1|local::at0007|Yes|)"
        ],
        "then": [
          "$gt0025|Diagnosis of acute cholecystitis|=local::at0004|Suspected|"
        ]
      },
      "gt0062": {
        "id": "gt0062",
        "priority": 7,
        "when": [
          "$gt0040|Score A|>=1",
          "$gt0041|Score B|>=1",
          "$gt0048|Imaging findings characteristic of acute cholecystitis|==1|local::at0007|Yes|"
        ],
        "then": [
          "$gt0025|Diagnosis of acute cholecystitis|=local::at0003|Definite|"
        ]
      },
      "gt0063": {
        "id": "gt0063",
        "priority": 6,
        "when": [
          "$gt0025|Diagnosis of acute cholecystitis|!=local::at0004|Suspected|",
          "$gt0025|Diagnosis of acute cholecystitis|!=local::at0003|Definite|"
        ],
        "then": [
          "$gt0025|Diagnosis of acute cholecystitis|=local::at0005|Entry criteria not met for acute cholecystitis diagnosis|"
        ]
      },
      "gt0066": {
        "id": "gt0066",
        "priority": 5,
        "when": [
          "$gt0049|Cardiovascular dysfunction|!=null",
          "$gt0050|Neurological dysfunction|!=null",
          "$gt0051|Respiratory dysfunction|!=null",
          "$gt0052|Renal dysfunction|!=null",
          "$gt0053|Hepatic dysfunction|!=null",
          "$gt0054|Hematological dysfunction|!=null"
        ],
        "then": [
          "$gt0067|Score grade III|=$gt0049.value+$gt0050.value+$gt0051.value+$gt0052.value+$gt0053.value+$gt0054.value"
        ]
      },
      "gt0064": {
        "id": "gt0064",
        "priority": 4,
        "when": [
          "$gt0055|Elevated WBC count (>18,000/mm3)|!=null",
          "$gt0056|Palpable tender mass in the right upper abdominal quadrant|!=null",
          "$gt0057|Duration of complaints >72 hours|!=null",
          "$gt0058|Marked local inflammation|!=null"
        ],
        "then": [
          "$gt0065|Score grade II|=$gt0055.value+$gt0056.value+$gt0057.value+$gt0058.value"
        ]
      },
      "gt0068": {
        "id": "gt0068",
        "priority": 3,
        "when": [
          "($gt0025|Diagnosis of acute cholecystitis|==local::at0004|Suspected|)||($gt0025|Diagnosis of acute cholecystitis|==local::at0003|Definite|)",
          "$gt0067|Score grade III|>=1"
        ],
        "then": [
          "$gt0039|Grade|=local::at0065|III|",
          "$gt0027|Acute cholecystitis severity|=local::at0013|Severe|",
          "$gt0028|30 day mortality|=local::at0017|5.4%|"
        ]
      },
      "gt0069": {
        "id": "gt0069",
        "priority": 2,
        "when": [
          "($gt0025|Diagnosis of acute cholecystitis|==local::at0003|Definite|)||($gt0025|Diagnosis of acute cholecystitis|==local::at0004|Suspected|)",
          "$gt0065|Score grade II|>=1",
          "!fired($gt0068)"
        ],
        "then": [
          "$gt0039|Grade|=local::at0064|II|",
          "$gt0027|Acute cholecystitis severity|=local::at0012|Moderate|",
          "$gt0028|30 day mortality|=local::at0016|0.8%|"
        ]
      },
      "gt0070": {
        "id": "gt0070",
        "priority": 1,
        "when": [
          "($gt0025|Diagnosis of acute cholecystitis|==local::at0004|Suspected|)||($gt0025|Diagnosis of acute cholecystitis|==local::at0003|Definite|)",
          "$gt0067|Score grade III|<1",
          "$gt0065|Score grade II|<1"
        ],
        "then": [
          "$gt0039|Grade|=local::at0063|I|",
          "$gt0027|Acute cholecystitis severity|=local::at0011|Mild|",
          "$gt0028|30 day mortality|=local::at0015|1.1%|"
        ]
      }
    }
