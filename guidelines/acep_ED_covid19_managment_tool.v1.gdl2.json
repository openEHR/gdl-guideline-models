    "rules": {
      "gt0034": {
        "id": "gt0034",
        "priority": 9,
        "when": [
          "$gt0005|NIH severity classification|==local::at0102|Critical|"
        ],
        "then": [
          "$gt0043|Patient's management text|=$gt0044.term",
          "$gt0058|NIH severity|=$gt0054.term"
        ]
      },
      "gt0038": {
        "id": "gt0038",
        "priority": 8,
        "when": [
          "$gt0005|NIH severity classification|==local::at0101|Severe|"
        ],
        "then": [
          "$gt0043|Patient's management text|=$gt0045.term",
          "$gt0058|NIH severity|=$gt0055.term"
        ]
      },
      "gt0032": {
        "id": "gt0032",
        "priority": 7,
        "when": [
          "$gt0006|Sex|!=null",
          "$gt0007|Age, years|!=null",
          "$gt0008|Respiratory rate, breaths per min|!=null",
          "$gt0009|Oxygen saturation|!=null",
          "$gt0010|Heart rate, beats per min|!=null",
          "$gt0011|Systolic BP, mmHg|!=null",
          "$gt0012|Temperature|!=null",
          "$gt0013|Alertness|!=null",
          "$gt0014|Inspired oxygen|!=null",
          "$gt0015|Performance status|!=null",
          "($gt0005|NIH severity classification|==local::at0099|Mild|)||($gt0005|NIH severity classification|==local::at0100|Moderate|)"
        ],
        "then": [
          "$gt0030|PRIEST score|.magnitude=$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value+$gt0010.value+$gt0011.value+$gt0012.value+$gt0013.value+$gt0014.value+$gt0015.value"
        ]
      },
      "gt0033": {
        "id": "gt0033",
        "priority": 6,
        "when": [
          "$gt0016|Cancer|!=null",
          "$gt0017|Cardiovascular disease|!=null",
          "$gt0018|Chronic respiratory disease|!=null",
          "$gt0019|Diabetes type II|!=null",
          "$gt0020|Down's Syndrome|!=null",
          "$gt0021|Hypertension|!=null",
          "$gt0022|Immunosuppression|!=null",
          "$gt0023|Neurologic disease|!=null",
          "$gt0024|Obesity|!=null",
          "$gt0025|Obstructive sleep apnea|!=null",
          "$gt0026|Pregnancy|!=null",
          "$gt0027|Renal disease|!=null",
          "$gt0028|Steroid usage|!=null",
          "($gt0005|NIH severity classification|==local::at0099|Mild|)||($gt0005|NIH severity classification|==local::at0100|Moderate|)"
        ],
        "then": [
          "$gt0031|COVID-19 additional risk factors|.magnitude=$gt0016.value+$gt0017.value+$gt0018.value+$gt0019.value+$gt0020.value+$gt0021.value+$gt0022.value+$gt0023.value+$gt0024.value+$gt0025.value+$gt0026.value+$gt0027.value+$gt0028.value"
        ]
      },
      "gt0039": {
        "id": "gt0039",
        "priority": 5,
        "when": [
          "$gt0005|NIH severity classification|==local::at0100|Moderate|",
          "($gt0030|PRIEST score|<=4)||($gt0031|COVID-19 additional risk factors|<=1)",
          "$gt0030|PRIEST score|!=null",
          "$gt0031|COVID-19 additional risk factors|!=null"
        ],
        "then": [
          "$gt0043|Patient's management text|=$gt0046.term",
          "$gt0058|NIH severity|=$gt0056.term"
        ]
      },
      "gt0040": {
        "id": "gt0040",
        "priority": 4,
        "when": [
