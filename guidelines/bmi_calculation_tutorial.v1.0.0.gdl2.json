      "Contributor name 3"
    ]
  },
  "definition": {
    "data_bindings": {
      "gt0002": {
        "id": "gt0002",
        "type": "INPUT",
        "model_id": "openEHR-EHR-OBSERVATION.body_weight.v2",
        "template_id": "openEHR-EHR-OBSERVATION.body_weight.v2",
        "elements": {
          "gt0003": {
            "id": "gt0003",
            "path": "/data[at0002]/events[at0003]/data[at0001]/items[at0004]"
          },
          "gt0004": {
            "id": "gt0004",
            "path": "/data/events/time"
          }
        },
        "predicates": [
          "max ( /data/events/time )"
        ]
      },
      "gt0005": {
        "id": "gt0005",
        "type": "INPUT",
        "model_id": "openEHR-EHR-OBSERVATION.height.v2",
        "template_id": "openEHR-EHR-OBSERVATION.height.v2",
        "elements": {
          "gt0006": {
            "id": "gt0006",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          },
          "gt0007": {
            "id": "gt0007",
            "path": "/data/events/time"
          }
        },
        "predicates": [
          "max ( /data/events/time )"
        ]
      },
      "gt0008": {
        "id": "gt0008",
        "type": "OUTPUT",
        "model_id": "openEHR-EHR-OBSERVATION.body_mass_index.v2",
        "template_id": "openEHR-EHR-OBSERVATION.body_mass_index.v2",
        "elements": {
          "gt0009": {
            "id": "gt0009",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0004]"
          }
        }
      }
    },
    "templates": {},
    "rules": {
      "gt0010": {
        "id": "gt0010",
        "priority": 1,
        "when": [
          "$gt0003|Weight|.unit=='kg'",
          "$gt0006|Height/Length|.unit=='cm'"
        ],
        "then": [
          "$gt0009|Body mass index|.magnitude = $gt0003|Weight|.magnitude / ( $gt0006|Height/Length|.magnitude / 100 ) ^ 2",
          "$gt0009|Body mass index|.unit='kg/m2'",
          "$gt0009|Body mass index|.precision = 2"
        ]
      }
    }
  },
  "ontology": {
    "term_definitions": {
      "en": {
        "id": "en",
        "terms": {
          "gt0001": {
            "id": "gt0001",
            "text": "BMI calculation",
            "description": "Body mass index (BMI) is a simple index of weight-for-height that is commonly used to classify overweight and obesity in adults. It is defined as a person's weight in kilograms divided by the square of their height in meters (kg/m²).\n\nThe frame of reference as defined by the World Health Organization (WHO):\n\n* Below 18.5 - underweight\n* 18.5 - 24.9 - normal weight\n* 25.0 - 29.9 - pre-obesity\n* 30.0 - 34.9 - obesity class I\n* 35.0 - 39.9 - obesity class II\n* Above 40.0 - obesity class III"
          },
          "gt0002": {
            "id": "gt0002",
            "text": "openEHR-EHR-OBSERVATION.body_weight.v2"
          },
