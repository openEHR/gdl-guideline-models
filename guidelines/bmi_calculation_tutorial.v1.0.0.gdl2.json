      "en": {
        "id": "en",
        "copyright": "Cambio CDS",
        "keywords": [
          "obesity",
          "body mass index",
          "BMI",
          "weight",
          "height"
        ],
        "purpose": "To calculate the body mass index in kg/m² from the weight (kg) and height (cm) of an individual.",
        "use": "Use for calculating the BMI in adults and children.",
        "misuse": "Do not use for classifying the BMI into categories of weight such as obesity. This must be done in a different guideline that will use the result of this guideline as input for BMI classification."
      }
    },
    "other_details": {
      "references": "1. Clinical Guidelines on the Identification, Evaluation, and Treatment of Overweight and Obesity in Adults: The Evidence Report [Internet]. Bethesda (MD): National Heart, Lung, and Blood Institute; NIH Publication No. 98-4083, Sep 1998, [cited 2009 July 02].",
      "en": "tutorial"
    },
