    "templates": {},
    "rules": {
      "gt0009": {
        "id": "gt0009",
        "priority": 2,
        "when": [
          "$gt0005|Gender| == local::at0006|Female|"
        ],
        "then": [
          "$gt0007|Ideal body weight|.magnitude = 45.5 + 0.91 * ( $gt0003|Height/Length|.magnitude - 152.4 )",
          "$gt0007|Ideal body weight|.unit = 'kg'",
          "$gt0007|Ideal body weight|.precision = 0",
          "$gt0008|Formula| = local::at0005|Devine Formula|"
        ]
      },
      "gt0010": {
        "id": "gt0010",
        "priority": 1,
        "when": [
          "$gt0005|Gender| == local::at0005|Male|"
        ],
        "then": [
          "$gt0007|Ideal body weight|.magnitude = 50 + 0.91 * ( $gt0003|Height/Length|.magnitude - 152.4 )",
          "$gt0007|Ideal body weight|.unit = 'kg'",
          "$gt0007|Ideal body weight|.precision = 0",
          "$gt0008|Formula| = local::at0005|Devine Formula|"
        ]
      }
    },
    "pre_conditions": [
      "$gt0003|Height/Length| >= 150,cm"
    ]
  },
