    "details" : {
      "en" : {
        "id" : "en",
        "purpose" : "To provide evidence-based recommendations for radiological follow-up of incidental solid lung nodules based on size and patient risk profile.",
        "keywords" : [
          "lung cancer",
          "lung nodule",
          "solid nodule",
          "screening",
          "incidental finding",
          "CT scan",
          "risk assessment"
        ],
        "use" : "To be used as the output of a clinical decision support rule triggered by a radiology report identifying a solid pulmonary nodule in a patient aged ≥ 35 years.",
        "misuse" : "Not intended for patients under 35 years, immunocompromised individuals, or those with known cancer history.",
        "copyright" : "© Cambio CDS"
      }
    },
    "other_details" : {
      "references" : "Regionala cancercentrum i samverkan. Nationellt vårdprogram lungcancer. Kunskapsbanken, 2025.\nAvailable at: kunskapsbanken.cancercentrum.se/diagnoser/lungcancer/vardprogram/",
      "en" : "Scans often find small nodules, and the decision whether to follow up or not is complex but well-defined in Kapitel 6."
    }
