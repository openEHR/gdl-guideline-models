    "rules" : {
      "gt0011" : {
        "id" : "gt0011",
        "priority" : 3,
        "when" : [
          "$gt0005|Age|.magnitude<=35&&$gt0003|Tumor size|.magnitude<6"
        ],
        "then" : [
          "$gt0010|No follow-up needed|=false"
        ]
      },
      "gt0012" : {
        "id" : "gt0012",
        "priority" : 2,
        "when" : [
          "$gt0003|Tumor size|.magnitude>=6&&$gt0003|Tumor size|.magnitude<=8",
          "$gt0008|Smoking status|==local::at0011|Never|&&$gt0005|Age|.magnitude<=35"
        ],
        "then" : [
          "$gt0014|follow-up CT at 12 months|=true"
        ]
      },
      "gt0016" : {
        "id" : "gt0016",
        "priority" : 1,
        "when" : [
          "$gt0005|Age|.magnitude>=35",
          "$gt0003|Tumor size|.magnitude>8"
        ],
        "then" : [
          "$gt0015|follow-up CT at 6–12 months|=true"
        ]
      }
    }
