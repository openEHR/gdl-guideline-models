      "gt0002": {
        "id": "gt0002",
        "type": "INPUT",
        "model_id": "openEHR-EHR-OBSERVATION.blood_pressure.v2",
        "template_id": "openEHR-EHR-OBSERVATION.blood_pressure.v2",
        "elements": {
