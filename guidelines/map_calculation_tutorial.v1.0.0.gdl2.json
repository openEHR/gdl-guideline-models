          }
        }
      }
    },
    "rules": {
      "gt0007": {
        "id": "gt0007",
        "priority": 1,
        "when": [
          "$gt0003|Systolic| != null"
        ],
        "then": [
          "$gt0006|Mean arterial pressure|.magnitude = ( $gt0003|Systolic|.magnitude + $gt0004|Diastolic|.magnitude * 2 ) / 3",
          "$gt0006|Mean arterial pressure|.unit = 'mm[Hg]'"
        ]
      }
    }
  },
