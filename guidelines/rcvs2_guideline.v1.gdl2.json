          },
          "gt0007": {
            "id": "gt0007",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0016]"
          }
        }
      },
      "gt0008": {
        "id": "gt0008",
        "model_id": "openEHR-EHR-OBSERVATION.rcvs2.v0",
        "template_id": "openEHR-EHR-OBSERVATION.rcvs2.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0009": {
            "id": "gt0009",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0019]"
          }
        }
      },
      "gt0010": {
        "id": "gt0010",
        "model_id": "openEHR-EHR-EVALUATION.rcvs2_score_assessment.v0",
        "template_id": "openEHR-EHR-EVALUATION.rcvs2_score_assessment.v0",
        "type": "OUTPUT",
        "elements": {
          "gt0011": {
            "id": "gt0011",
            "path": "/data[at0001]/items[at0002]"
          }
        }
      },
      "gt0021": {
        "id": "gt0021",
        "model_id": "openEHR-EHR-OBSERVATION.basic_demographic.v1",
        "template_id": "openEHR-EHR-OBSERVATION.basic_demographic.v1",
        "type": "INPUT",
        "elements": {
          "gt0022": {
            "id": "gt0022",
            "path": "/data[at0001]/events[at0002]/data[at0003]/items[at0013]"
          }
        }
      }
    },
    "pre_conditions": [
      "$gt0022|Age|>=18,a",
      "$gt0022|Age|<=55,a"
    ],
    "rules": {
      "gt0014": {
        "id": "gt0014",
        "priority": 5,
        "when": [
          "$gt0003|Recurrent or single TCH|!=null",
          "$gt0004|Carotid artery (intracranial)|!=null",
          "$gt0005|Vasoconstrictive trigger|!=null",
          "$gt0006|Sex|!=null",
          "$gt0007|Subarachnoid hemorrhage|!=null",
          "$gt0022|Age|!=null"
        ],
        "then": [
          "$gt0009|RCVS2 score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value+$gt0007.value"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 4,
        "when": [
          "$gt0009|RCVS2 score|<=2"
        ],
        "then": [
          "$gt0023|Interpretation text|=$gt0018.term"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 3,
        "when": [
          "($gt0009|RCVS2 score|==3)||($gt0009|RCVS2 score|==4)"
        ],
        "then": [
          "$gt0023|Interpretation text|=$gt0019.term"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 2,
        "when": [
          "$gt0009|RCVS2 score|>=5"
        ],
        "then": [
          "$gt0023|Interpretation text|=$gt0020.term"
        ]
      },
      "gt0024": {
        "id": "gt0024",
        "priority": 1,
        "when": [
          "(fired($gt0015))||((fired($gt0016))||(fired($gt0017)))"
        ],
        "then": [
          "$gt0011|Diagnosis|.value=$gt0023"
        ]
      }
    }
  },
