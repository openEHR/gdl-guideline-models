    "rules": {
      "gt0010": {
        "id": "gt0010",
        "priority": 8,
        "when": [
          "$gt0003|Probability of vascular cause on non-contrast computed tomography (NCCT)|!=null",
          "$gt0004|Age|!=null",
          "$gt0005|Sex|!=null",
          "$gt0006|Absence of both hypertension AND impaired coagulation|!=null"
        ],
        "then": [
          "$gt0008|sICH Score|.magnitude=$gt0003.value+$gt0004.value+$gt0005.value+$gt0006.value"
        ]
      },
      "gt0011": {
        "id": "gt0011",
        "priority": 7,
        "when": [
          "$gt0008|sICH Score|==0"
        ],
        "then": [
          "$gt0021|% Positive CTA|='0'"
        ]
      },
      "gt0012": {
        "id": "gt0012",
        "priority": 6,
        "when": [
          "$gt0008|sICH Score|==1"
        ],
        "then": [
          "$gt0021|% Positive CTA|='1.5'"
        ]
      },
      "gt0013": {
        "id": "gt0013",
        "priority": 5,
        "when": [
          "$gt0008|sICH Score|==2"
        ],
        "then": [
          "$gt0021|% Positive CTA|='4.4'"
        ]
      },
      "gt0014": {
        "id": "gt0014",
        "priority": 4,
        "when": [
          "$gt0008|sICH Score|==3"
        ],
        "then": [
          "$gt0021|% Positive CTA|='20'"
        ]
      },
      "gt0015": {
        "id": "gt0015",
        "priority": 3,
        "when": [
          "$gt0008|sICH Score|==4"
        ],
        "then": [
          "$gt0021|% Positive CTA|='38.1'"
        ]
      },
      "gt0016": {
        "id": "gt0016",
        "priority": 2,
        "when": [
          "$gt0008|sICH Score|==5"
        ],
        "then": [
          "$gt0021|% Positive CTA|='80'"
        ]
      },
      "gt0017": {
        "id": "gt0017",
        "priority": 1,
        "when": [
          "$gt0008|sICH Score|==6"
        ],
        "then": [
          "$gt0021|% Positive CTA|='100'"
        ]
      }
    }
